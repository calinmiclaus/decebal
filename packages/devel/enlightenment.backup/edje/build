NAME=edje
VERSION=21052005
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="A graphical layout and animation library for animated resizable, compressed and scalable themes."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="2706K"
HUSE="static"

SOURCES="edje-21052005.tar.bz2"

RUNTIME="=evas-21052005 =eet-21052005 >=openssl-0.9.7e =embryo-21052005 >=imlib2-1.0.0 ecore libast imlib2_loaders"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  ./autogen.sh
  CPPFLAGS="$CPPFLAGS -I/opt/enlightenment/include" \
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* INSTALL NEWS README
}
