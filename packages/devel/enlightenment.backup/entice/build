NAME=entice
VERSION=21052005
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="Entice is an image viewer using enlightenment libraries."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="596K"
HUSE="static"

SOURCES="entice-21052005.tar.bz2"

RUNTIME="=evas-21052005 =ecore-21052005 =edb-21052005 =edje-21052005 =esmart-21052005 gimp"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  ./autogen.sh
  CPPFLAGS="$CPPFLAGS -I/opt/enlightenment/include" \
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* INSTALL ChangeLog \
    NEWS README
}
