NAME=esmart
VERSION=21052005
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="A collection of evas smart objects."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="77K"
HUSE="static"

SOURCES="esmart-21052005.tar.bz2"

RUNTIME="=evas-21052005 =ecore-21052005 >=imlib2-1.0.0 =epsilon-21052005"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  ./autogen.sh
  CPPFLAGS="$CPPFLAGS -I/opt/enlightenment/include" \
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* INSTALL ChangeLog \
    NEWS README
}
