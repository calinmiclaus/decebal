NAME=cone
VERSION=0.63
ARCH=i686
RELEASE=1
URL="http://www.courier-mta.org/cone/index.html"
DESC="Cone is a text-based mail client."
GROUP=mail
LICENSE=GPLv2
SIZE="3480K"
HUSE="static"

SOURCES="http://heanet.dl.sourceforge.net/sourceforge/courier/cone-0.63.tar.bz2"

BUILDTIME="gettext"

RUNTIME=">=ncurses-5.3 >=openssl-0.9.7e fam libxml2 aspell"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
	      --localstatedir=/var \
	      --libexecdir=/usr/lib/$NAME-$VERSION \
	      --mandir=/usr/share/man \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs ABOUT-NLS AUTHORS COPYING* ChangeLog INSTALL \
    NEWS README
}
