NAME=xfce4-iconbox
VERSION=4.2.2
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="A panel for XFCE that shows icons of the running programs."
GROUP=xfce
LICENSE=GPLv2
SIZE="400K"
HUSE="static debug profile"

SOURCES="http://www.us.xfce.org/archive/xfce-4.2.2/src/xfce4-iconbox-4.2.2.tar.gz"

BUILDTIME="gettext >=pkgconfig-0.9.0"

RUNTIME=">=xfce-mcs-manager-4.2.0 >=libxfcegui4-4.2.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
  
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      --with-locales-dir=/usr/share/locale \
	      --enable-final \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog* INSTALL NEWS \
    README TODO
}
