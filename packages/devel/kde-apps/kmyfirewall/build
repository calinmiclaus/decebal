NAME=kmyfirewall
VERSION=0.9.6.1
ARCH=i686
RELEASE=1
URL="http://kmyfirewall.sourceforge.net"
DESC="Graphical interface to the iptables firewall"
GROUP=kde-apps
LICENSE=GPLv2

SOURCES="http://telia.dl.sourceforge.net/sourceforge/kmyfirewall/$NAME-$VERSION.tar.bz2"

BUILDTIME="qt
           kdebase
	   iptables"

build() {
    cd $NAME
    ./configure --prefix=/opt/kde \
                --localstatedir=/var/opt/kde
    make
    make DESTDIR=$PKG install

    install_docs AUTHORS COPYING ChangeLog INSTALL README TODO
}
