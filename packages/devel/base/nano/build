NAME=nano
VERSION=1.2.4
ARCH=i686
RELEASE=1
DESC="Pico editor clone with enhancements."
URL="http://www.nano-editor.org"
GROUP=base
LICENSE="GPLv2"
SIZE="892K"

SOURCES="http://www.nano-editor.org/dist/v1.2/nano-1.2.4.tar.gz"

RUNTIME="ncurses"

build() {
  cd $SRC/$NAME-$VERSION

  ./configure --prefix=/usr \
              --infodir=/usr/share/info \
	      --mandir=/usr/share/man
  make
  make DESTDIR=$PKG install

  install_docs ABOUT-NLS AUTHORS BUGS COPYING ChangeLog INSTALL \
    NEWS README THANKS TODO UPGRADE
}
