NAME=wfnetobjs
VERSION=0.2.4
ARCH=i686
RELEASE=1
URL="http://www.wallfire.org/"
DESC="Handles network objects of the WallFire project."
GROUP=security
LICENSE="GPLv2"
SIZE="397"
HUSE="static debug"

SOURCES="http://www.wallfire.org/download/wfnetobjs-0.2.4.tar.bz2"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug"
  
  ./configure --prefix=/usr $OPTS
  make
  make DESTDIR=$PKG install
    
  install_docs ABOUT-NLS AUTHORS COPYING ChangeLog INSTALL \
    NEWS README* TODO
}
