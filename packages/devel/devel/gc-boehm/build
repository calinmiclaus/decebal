NAME=gc-boehm
VERSION=6.4
ARCH=i686
RELEASE=1
URL="http://www.hpl.hp.com/personal/Hans_Boehm/gc"
DESC="Garbage collection and memory leak detection for C and C++"
GROUP=devel
LICENSE=BSDL
SIZE="760K"
HUSE="static"

SOURCES="http://www.hpl.hp.com/personal/Hans_Boehm/gc/gc_source/gc6.4.tar.gz"

build() {
  cd $SRC/gc$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
    
  ./configure --prefix=/usr \
              --enable-threads=pthreads \
              --enable-shared \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install -D -m 644 doc/gc.man $PKG/usr/share/man/man3/gc.3
  
  rm -rf $PKG/usr/share
  
  install_docs README.QUICK
}
