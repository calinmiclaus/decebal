NAME=bluefish
VERSION=1.0.4
ARCH=i686
RELEASE=1
URL="http://bluefish.openoffice.nl/"
DESC="A Gtk HTML editor."
GROUP=devel
LICENSE=GPLv2
SIZE="1435K"
HUSE="nls"

SOURCES="http://pkedu.fbt.eitn.wau.nl/~olivier/downloads/bluefish-1.0.4.tar.bz2"

RUNTIME="gtk2 pcre"

use nls && BUILDTIME="gettext"

build() {
  cd $SRC/$NAME-$VERSION
  
  use nls && OPTS="$OPTS --enable-nls" || OPTS="$OPTS --disable-nls"
  
  ./configure --prefix=/usr \
              $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING INSTALL README TODO
}
