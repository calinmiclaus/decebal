NAME=vcdimager
VERSION=0.7.21
ARCH=i686
RELEASE=1
URL="http://www.vcdimager.org/"
DESC="A suite for authoring, disassembling and analyzing Video CD's and Super Video CD's."
GROUP=multimedia
LICENSE="GPLv2"
SIZE="960K"

SOURCES="http://www.vcdimager.org/pub/vcdimager/vcdimager-0.7/vcdimager-0.7.21.tar.gz"

RUNTIME=">=libxml2-2.3.8 popt libcdio"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
	      --infodir=/usr/share/info
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS BUGS COPYING ChangeLog* FAQ HACKING \
    INSTALL NEWS README TODO
}
