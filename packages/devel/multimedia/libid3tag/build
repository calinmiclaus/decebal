NAME=libid3tag
VERSION=0.15.1b
ARCH=i686
RELEASE=1
URL="http://www.underbit.com/products/mad/"
DESC="A library for id3 tagging."
GROUP=multimedia
LICENSE=GPLv2
SIZE="331K"
HUSE="static debug profile"

SOURCES="ftp://ftp.mars.org/pub/mpeg/libid3tag-0.15.1b.tar.gz
         id3tag.pc"

RUNTIME=">=zlib-1.1.4"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debugging"
  use profile && OPTS="$OPTS --enable-profiling"
    
  ./configure --prefix=/usr $OPTS
  make
  make DESTDIR=$PKG install
  
  install -D -m 0644 ../id3tag.pc $PKG/usr/lib/pkgconfig/id3tag.pc
  
  install_docs CHANGES COPYING COPYRIGHT CREDITS INSTALL README \
    TODO VERSION
}
