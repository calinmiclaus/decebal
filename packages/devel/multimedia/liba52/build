NAME=liba52
VERSION=0.7.4
ARCH=i686
RELEASE=1
URL="http://liba52.sourceforge.net/"
DESC="Library used for audio decoding."
GROUP=multimedia
LICENSE=GPLv2
SIZE="235K"
HUSE="static"

SOURCES="http://liba52.sourceforge.net/files/a52dec-0.7.4.tar.gz"

build() {
  cd $SRC/a52dec-$VERSION
  
  use static || OPTS="--disable-static"
    
  ./configure --prefix=/usr \
              --enable-shared $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog HISTORY INSTALL \
    NEWS README TODO
}
