NAME=libraw1394
VERSION=1.1.0
ARCH=i686
RELEASE=1
URL="http://sourceforge.net/projects/libraw1394"
DESC="Provides direct access to the connected 1394 buses to user space."
GROUP=multimedia
LICENSE="GPLv2 LGPLv2"
SIZE="365K"
HUSE="static"

SOURCES="http://www.linux1394.org/dl/libraw1394-1.1.0.tar.gz"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  ./configure --prefix=/usr $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* ChangeLog INSTALL NEWS README
}
