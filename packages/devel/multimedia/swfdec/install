post_install() {
  mkdir -p /etc/gtk-2.0
  /usr/bin/gtk-query-immodules-2.0 > /etc/gtk-2.0/gtk.immodules
  /usr/bin/gdk-pixbuf-query-loaders > /etc/gtk-2.0/gdk-pixbuf.loaders
}

post_upgrade() {
  mkdir -p /etc/gtk-2.0
  /usr/bin/gtk-query-immodules-2.0 > /etc/gtk-2.0/gtk.immodules
  /usr/bin/gdk-pixbuf-query-loaders > /etc/gtk-2.0/gdk-pixbuf.loaders
}

post_remove() {
  mkdir -p /etc/gtk-2.0
  /usr/bin/gtk-query-immodules-2.0 > /etc/gtk-2.0/gtk.immodules
  /usr/bin/gdk-pixbuf-query-loaders > /etc/gtk-2.0/gdk-pixbuf.loaders
}
