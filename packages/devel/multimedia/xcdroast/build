NAME=xcdroast
VERSION=0.98alpha15
ARCH=i686
RELEASE=1
URL="http://www.xcdroast.org/"
DESC="A frontend for writing CD's."
GROUP=multimedia
LICENSE=GPLv2
SIZE="3205K"
HUSE="nls"

SOURCES="http://heanet.dl.sourceforge.net/sourceforge/xcdroast/xcdroast-0.98alpha15.tar.gz
         xcdroast.desktop"

RUNTIME="gtk2 cdrtools"

use nls && BUILDTIME="gettext"

build() {
  cd $SRC/$NAME-$VERSION
  
  use nls && OPTS="$OPTS --enable-nls" || OPTS="$OPTS --disable-nls"
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --enable-gtk2 \
	      --with-x \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install -D -m 0644 ../xcdroast.desktop $PKG/usr/share/applications/xcdroast.desktop
  install -D -m 0644 lib/icons/xcdricon.png $PKG/usr/share/pixmaps/xcdricon.png
  
  install_docs ABOUT-NLS AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}
