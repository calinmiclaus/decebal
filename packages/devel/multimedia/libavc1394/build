NAME=libavc1394
VERSION=0.5.0
ARCH=i686
RELEASE=1
URL="http://www.linux1394.org/"
DESC="A programming interface to the AV/C specification from the 1394 Trade Assocation."
GROUP=multimedia
LICENSE="LGPLv2.1"
SIZE="331K"
HUSE="static"

SOURCES="http://heanet.dl.sourceforge.net/sourceforge/libavc1394/libavc1394-0.5.0.tar.gz"

RUNTIME=">=libraw1394-1.0.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
    
  ./configure --prefix=/usr $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO
}