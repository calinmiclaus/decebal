NAME=libcdio
VERSION=0.72
ARCH=i686
RELEASE=1
URL="http://www.gnu.org/software/libcdio/"
DESC="A library which encapsulates CD-ROM reading and control."
GROUP=multimedia
LICENSE="GPLv2"
SIZE="1669K"
HUSE="static"

SOURCES="ftp://ftp.gnu.org/gnu/libcdio/libcdio-0.72.tar.gz"

RUNTIME="cdparanoia >=libcddb-0.9.4"

build() {
  cd $SRC/$NAME-$VERSION
  
  # Nice..this package depends on vcdimager and vcdimager depends on this package...
  # so we deactivate the vcdimager dependency
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
   
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
	      --infodir=/usr/share/info \
              --disable-vcd-info \
              $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README* THANKS TODO
}
