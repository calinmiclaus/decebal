NAME=jamboree
VERSION=0.5
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="Jamboree is a music player, not the kitchen sink."
GROUP=multimedia
LICENSE="GPLv2"
SIZE="420K"
HUSE="static"

SOURCES="http://ftp.gnome.org/pub/GNOME/sources/jamboree/0.5/jamboree-0.5.tar.bz2"

RUNTIME=">=libgnomeui-2.0 >=gstreamer-0.8.2"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO
}

