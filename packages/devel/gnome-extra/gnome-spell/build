NAME=gnome-spell
VERSION=1.0.6
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="A GNOME/Bonobo component for spell checking."
GROUP=gnome-extra
LICENSE="GPLv2"

SOURCES="http://ftp.gnome.org/mirror/gnome.org/sources/gnome-spell/1.0/gnome-spell-1.0.6.tar.bz2"

RUNTIME="libgnomeui aspell"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/opt/gnome
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}
