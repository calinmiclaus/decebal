NAME=gnome-keyring-manager
VERSION=0.0.4
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="A keyring management program for the GNOME Desktop."
GROUP=gnome-extra
LICENSE=GPLv2
SIZE="376K"

SOURCES="http://ftp.gnome.org/pub/GNOME/sources/gnome-keyring-manager/0.0/gnome-keyring-manager-0.0.4.tar.bz2"

BUILDTIME="intltool"

RUNTIME=">=libgnomeui-2.6.0 >=gnome-keyring-0.3.2"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog HACKING INSTALL \
    NEWS README TODO
}

