NAME=beagle
VERSION=0.0.9
ARCH=i686
RELEASE=1
URL="http://beaglewiki.org/Main_Page"
DESC="A search tool that ransacks your personal information space."
GROUP=gnome-extra
LICENSE="BSDL"
SIZE="905K"
HUSE="static"

SOURCES="http://ftp.gnome.org/mirror/gnome.org/sources/beagle/0.0/beagle-0.0.9.tar.bz2"

BUILDTIME="gettext"

RUNTIME=">=mono-1.0.6 sqlite"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  export PKG_CONFIG_PATH="/opt/gnome/lib/pkgconfig:/opt/mono/lib/pkgconfig"
  export PATH="$PATH:/opt/mono/bin"
  
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --enable-epiphany-extension $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}
