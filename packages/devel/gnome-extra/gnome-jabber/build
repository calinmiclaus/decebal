NAME=gnome-jabber
VERSION=0.4
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="A Jabber client for the GNOME Desktop."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="742K"
HUSE="static"

SOURCES="http://ftp.gnome.org/pub/GNOME/sources/gnome-jabber/0.4/gnome-jabber-0.4.tar.bz2"

RUNTIME=">=gnet-2.0 >=gtk2-2.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --localstatedir=/var/lib \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO 
}
