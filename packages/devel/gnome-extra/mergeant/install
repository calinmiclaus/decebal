post_install() {
  /sbin/ldconfig >/dev/null 2>&1
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper >/dev/null 2>&1
  /usr/bin/update-desktop-database >/dev/null 2>&1
}

post_upgrade() {
  /sbin/ldconfig >/dev/null 2>&1
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper >/dev/null 2>&1
  /usr/bin/update-desktop-database >/dev/null 2>&1
}

post_remove() {
  /sbin/ldconfig >/dev/null 2>&1
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper >/dev/null 2>&1
  /usr/bin/update-desktop-database >/dev/null 2>&1
}
