NAME=gnome-pilot
VERSION=2.0.13
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="Pilot support for the GNOME Desktop."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="901K"
HUSE="static"

SOURCES="http://ftp.gnome.org/pub/GNOME/sources/gnome-pilot/2.0/gnome-pilot-2.0.13.tar.bz2"

BUILDTIME="intltool"

RUNTIME="gnome-panel pilot-link gnome-vfs >=libgnomeui-2.0.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
    
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --mandir=/opt/gnome/share/man \
	      --libexecdir=/opt/gnome/sbin \
	      --localstatedir=/var/lib \
	      --enable-usb \
	      --enable-network \
	      --with-vfs $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO
}

