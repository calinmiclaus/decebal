NAME=gnome-system-monitor
VERSION=2.10.0
ARCH=i686
RELEASE=1
URL="http://gnome.org/"
DESC="A nicer, simpler, easier to use replacement to gtop."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="734K"
HUSE="selinux"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gnome-system-monitor-2.10.0.tar.bz2"

BUILDTIME="intltool"

RUNTIME="libgnomeui libgtop libwnck"

build() {
  cd $SRC/$NAME-$VERSION

  find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
  if [ -f omf.make ]; then
    sed -i -e 's/-scrollkeeper-update.*//' omf.make
  fi
  
  use selinux && OPTS="--enable-selinux"
  	 
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --mandir=/opt/gnome/share/man \
	      --localstatedir=/var/lib $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO HACKING
}
