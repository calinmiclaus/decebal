NAME=gnome-user-share
VERSION=0.5
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="Easy to use user-level file sharing to the masses."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="257K"

SOURCES="http://ftp.gnome.org/pub/GNOME/sources/gnome-user-share/0.5/gnome-user-share-0.5.tar.bz2"

BUILDTIME="intltool gettext pkgconfig"

RUNTIME=">=howl-0.9.6"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --libexecdir=/opt/gnome/bin
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}

