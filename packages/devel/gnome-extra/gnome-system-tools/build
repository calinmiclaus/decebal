NAME=gnome-system-tools
VERSION=1.2.0
ARCH=i686
RELEASE=1
URL="http://gnome.org/"
DESC="System configuration utilities for the GNOME Desktop."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="1738K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gnome-system-tools-1.2.0.tar.bz2"

BUILDTIME="intltool gettext pkgconfig"

RUNTIME=">=system-tools-backends-1.1.92 >=gtk2-2.6.0 >=libgnomeui-2.9.0 >=libglade-2.4.0 >=gconf-2.2.0"

build() {
  cd $SRC/$NAME-$VERSION
	 
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO HACKING
}
