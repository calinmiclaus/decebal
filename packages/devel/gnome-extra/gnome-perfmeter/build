NAME=gnome-perfmeter
VERSION=2.0.47
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="A GNOME/Gtk+ port of sdtperfmeter."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="532K"
HUSE="static"

SOURCES="http://ftp.gnome.org/pub/GNOME/sources/gnome-perfmeter/2.0/gnome-perfmeter-2.0.47.tar.bz2"

RUNTIME="libgnomeui libglade"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --localstatedir=/var/lib \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO
}
