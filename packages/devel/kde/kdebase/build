NAME=kdebase
VERSION=3.5.0
ARCH=i686
RELEASE=1
URL="http://www.kde.org"
DESC="KDE Base Programs."
GROUP=kde
LICENSE="GPLv2"
SIZE="22688K"
HUSE="static debug"

SOURCES="ftp://ftp.roedu.net/pub/mirrors/ftp.kde.org/stable/$VERSION/src/$NAME-$VERSION.tar.bz2
xinitrc.kde
"
RUNTIME=">=kdelibs-3.5.0 xorg"

function build() {
    OPTS=""
    use static && OPTS="--enable-static" || OPTS="--disable-static"
    use debug && OPTS="$OPTS --enable-debug" || OPTS="$OPTS --disable-debug"

    cd $SRC/$NAME-$VERSION
    
    export PATH=$PATH:/opt/kde/bin
    ./configure --prefix=/opt/kde \
	--sysconfdir=/etc/opt/kde \
	--disable-debug \
        --disable-dependency-tracking \
        --with-shadow \
	--with-xinerama \
	$OPTS
    
    make || return 1
    
    make DESTDIR=$PKG install || return 1
        
    install -D -m 0755 ../xinitrc.kde $PKG/etc/X11/xinit/xinitrc.kde
    
    install_docs AUTHORS COPYING INSTALL README \
        README.pam
}
