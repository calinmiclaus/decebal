NAME=kde-i18n-ro
VERSION=3.5.0
ARCH=i686
RELEASE=1
URL="http://www.kde.org"
DESC="KDE internationalisation - Romanian"
GROUP=kde
LICENSE=GPLv2
SOURCES="ftp://ftp.roedu.net/pub/mirrors/ftp.kde.org/stable/3.5/src/kde-i18n/kde-i18n-ro-$VERSION.tar.bz2"
SIZE="3092K"

RUNTIME="=kdebase-3.5.0"

build() {
    cd $NAME-$VERSION
    ./configure --prefix=/opt/kde \
                --localstatedir=/var/opt/kde
    make
    make DESTDIR=$PKG install
}