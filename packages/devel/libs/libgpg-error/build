NAME=libgpg-error
VERSION=1.0
ARCH=i686
RELEASE=1
URL="http://www.g10code.com/"
DESC="A library that defines common error values for all GnuPG components."
GROUP=libs
LICENSE="GPLv2 LGPLv2.1"
SIZE="316K"
HUSE="nls static"

SOURCES="ftp://ftp.gnupg.org/gcrypt/libgpg-error/libgpg-error-1.0.tar.gz"

use nls && BUILDTIME="gettext"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  use nls || OPTS="$OPTS --disable-nls"
    
  ./configure --prefix=/usr $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs ABOUT-NLS AUTHORS COPYING* ChangeLog INSTALL \
    NEWS README VERSION
}
