NAME=gqview
VERSION=2.0.1
ARCH=i686
RELEASE=1
URL="http://gqview.sourceforge.net/"
DESC="A simple image viewer."
GROUP=graphics
LICENSE="GPL 2"
SIZE="1295K"

SOURCES="http://kent.dl.sourceforge.net/sourceforge/gqview/gqview-2.0.1.tar.gz"

BUILDTIME="gettext"

RUNTIME=">=gtk2-2.4.0 libpng"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install
    
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO
}
