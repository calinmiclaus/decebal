NAME=xaw3d
VERSION=1.5
ARCH=i686
RELEASE=1
URL="ftp://ftp.visi.com/users/hawkeyd/X/"
DESC="A 3D Athena toolkit replacement."
GROUP=graphics
LICENSE=GPLv2

SOURCES="http://ftp.x.org/contrib/widgets/Xaw3d/R6.3/Xaw3d-1.5.tar.gz
         xaw3d-1.5.patch"

RUNTIME="xorg"

build() {

  patch -p1 < xaw3d-1.5.patch

  cd $SRC/xc/lib/Xaw3d

  mkdir X11

  ln -s .. X11/Xaw3d

  xmkmf
  make
  make DESTDIR=$PKG install
}
