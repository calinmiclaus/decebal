NAME=gtkmm2
VERSION=2.6.0
ARCH=i686
RELEASE=1
URL="http://www.gtkmm.org/"
DESC="The official C++ interface for the popular GUI library GTK+."
GROUP=graphics
LICENSE=GLGPLv2.1
SIZE="4385K"
HUSE="static"

SOURCES="ftp://ftp.gnome.org/pub/gnome/bindings/2.10/2.10.0/sources/c++/gtkmm-2.6.0.tar.bz2"

BUILDTIME="pkgconfig"

RUNTIME=">=glibmm-2.6.0 libsigc++ >=gtk2-2.6.0"

build() {
  cd $SRC/gtkmm-$VERSION
  
  use static && OPTS="--enable-static"
    
  ./configure --prefix=/usr $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS CHANGES COPYING ChangeLog INSTALL NEWS \
    PORTING README*
}
