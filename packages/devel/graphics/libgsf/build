NAME=libgsf
VERSION=1.11.1
ARCH=i686
RELEASE=1
DESC="Library for different structured image formats."
URL="http://www.gnome.org"
GROUP=graphics
SOURCES="ftp://ftp.gnome.org/pub/gnome/sources/libgsf/1.11/libgsf-1.11.1.tar.bz2"
LICENSE="GPLv2 LGPLv2.1"
SIZE="404K"
HUSE="gnome gtkdoc static"

RUNTIME=">=zlib-1.2.1 >=libxml2-2.4.16 glib2 bzip2"

use gtkdoc && BUILDTIME="gtk-doc"
use gnome && RUNTIME="gnome-vfs libbonobo"

build() {
    cd $SRC/$NAME-$VERSION
    
    use static || OPTS="--disable-static"    
    use gnome || OPTS="$OPTS --without-gnome"
    use gtkdoc && OPTS="$OPTS --enable-gtk-doc"
    
    ./configure --prefix=/opt/gnome \
                --sysconfdir=/etc/opt/gnome \
		--localstatedir=/var/lib \
		--with-bz2 $OPTS
    make
    make DESTDIR=$PKG install
    
    install_docs AUTHORS BUGS COPYING COPYING.LIB ChangeLog HACKING INSTALL \
      NEWS README TODO
}
