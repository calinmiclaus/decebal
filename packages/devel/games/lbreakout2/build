NAME=lbreakout2
VERSION=2.5.2
ARCH=i686
RELEASE=1
URL="http://lgames.sourceforge.net/"
DESC="A breakout-style arcade game for Linux."
GROUP=games
LICENSE="GPLv2"
SIZE="2782K"

SOURCES="http://heanet.dl.sourceforge.net/sourceforge/lgames/lbreakout2-2.5.2.tar.gz
         lbreakout.desktop lbreakout.png"

RUNTIME=">=libsdl-1.2.0 sdl_mixer sdl_net"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr/games \
              --localstatedir=/var/lib/games \
	      --enable-sdl-net
  make
  make DESTDIR=$PKG install
  
  ( mkdir -p $PKG/usr/share/doc
    mv $PKG/usr/doc/lbreakout2 $PKG/usr/share/doc/
    rm -rf $PKG/usr/doc )
  
  install -D -m 0644 ../lbreakout.desktop $PKG/usr/share/applications/lbreakout.desktop
  install -D -m 0644 ../lbreakout.png $PKG/usr/share/pixmaps/lbreakout.png
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README* TODO 
}
