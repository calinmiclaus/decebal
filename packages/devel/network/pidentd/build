NAME=pidentd
VERSION=3.0.18
ARCH=i686
RELEASE=1
URL="http://www.lysator.liu.se/~pen/pidentd/"
DESC="An RFC1413 compliant Ident daemon."
GROUP=network
LICENSE=PD
SIZE="349K"

SOURCES="ftp://ftp.lysator.liu.se/pub/ident/servers/$NAME-$VERSION.tar.gz
         identd.init"

RUNTIME="libc"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc
  make
  
  install -D -m 0755 src/identd $PKG/usr/sbin/identd
  install -m 0755 src/ibench $PKG/usr/sbin/ibench
  install -m 0755 src/idecrypt $PKG/usr/sbin/idecrypt
  install -m 0755 src/ikeygen $PKG/usr/sbin/ikeygen
  install -D -m 0644 etc/identd.conf $PKG/etc/identd.conf
  install -D -m 0644 doc/identd.8 $PKG/usr/share/man/man8/identd.8
  
  ln -s identd $PKG/usr/sbin/in.identd
  
  install -D -m 0755 ../identd.init $PKG/etc/rc.d/identd
  
  install_docs BUGS ChangeLog FAQ INSTALL KNOWNBUGS README Y2K
}
