NAME=nfs-utils
#VERSION=1.0.7
VERSION=1.0.6
ARCH=i686
RELEASE=1
URL="http://sourceforge.net/projects/nfs/"
DESC="The Linux NFS utilities."
GROUP=network
LICENSE=GPLv2
SIZE="259K"

SOURCES="http://heanet.dl.sourceforge.net/sourceforge/nfs/$NAME-$VERSION.tar.gz
         exports nfsd.init nfsd.sysconf"

BACKUPS="etc/exports
         etc/conf.d/nfsd"

RUNTIME="portmap"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
	      --with-statedir=/var/lib/nfs \
	      --enable-nfsv3 \
	      --enable-rquotad
  make
  make install_prefix=$PKG install
  
  install -D -m 0700 ../nfsd.init $PKG/etc/rc.d/nfsd
  install -D -m 0644 ../nfsd.sysconf $PKG/etc/conf.d/nfsd
  install -m 0644 ../exports $PKG/etc/exports
  
  install_docs COPYING ChangeLog README
}
