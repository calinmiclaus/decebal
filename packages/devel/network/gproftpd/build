NAME=gproftpd
VERSION=8.2.2
ARCH=i686
RELEASE=1
URL="http://mange.dynalias.org/linux.html"
DESC="A GTK+ interface for ProFTPD administration."
GROUP=network
LICENSE="GPLv2"
SIZE="348K"

SOURCES="http://mange.dynalias.org/linux/gproftpd/gproftpd-8.2.2.tar.gz"

RUNTIME=">=gtk2-1.3.13"

RUNTIME=">=proftpd-1.2.10"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc
  make
  make DESTDIR=$PKG install
  
  install -D -m 0644 desktop/net-gproftpd.desktop $PKG/usr/share/applications/net-gproftpd.desktop
  
  rm -rf $PKG/usr/share/doc/$NAME
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}
