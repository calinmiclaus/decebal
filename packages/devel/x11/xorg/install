post_install() {
  if ! grep -q ^/usr/X11R6/lib /etc/ld.so.conf
  then
   echo "/usr/X11R6/lib" >> /etc/ld.so.conf
  fi
  
  /sbin/ldconfig 2>/dev/null
  /usr/bin/fc-cache &>/dev/null
}

post_upgrade() {
  if ! grep -q ^/usr/X11R6/lib /etc/ld.so.conf
  then
    echo "/usr/X11R6/lib" >> /etc/ld.so.conf
  fi
  
  /sbin/ldconfig 2>/dev/null
  /usr/bin/fc-cache &>/dev/null
}

post_remove() {
  if grep -q ^/usr/X11R6/lib /etc/ld.so.conf
  then
    grep -v "/usr/X11R6/lib" /etc/ld.so.conf > /etc/ld.so.conf.new
    mv /etc/ld.so.conf.new /etc/ld.so.conf
  fi
}
