NAME=berkleydb-perl
VERSION=0.26
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~pmqs/BerkeleyDB-0.26/"
DESC="Use facilities provided by Berkley DB version 2 or greater in perl."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="126K"

SOURCES="http://search.cpan.org/CPAN/authors/id/P/PM/PMQS/BerkeleyDB-0.26.tar.gz"

build() {
  cd $SRC/BerkeleyDB-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST
}
