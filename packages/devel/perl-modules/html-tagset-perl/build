NAME=html-tagset-perl
VERSION=3.04
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~sburke/HTML-Tagset-3.04/"
DESC="Contains data tables useful in dealing with HTML."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="7K"

SOURCES="http://search.cpan.org/CPAN/authors/id/S/SB/SBURKE/HTML-Tagset-3.04.tar.gz"

build() {
  cd $SRC/HTML-Tagset-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs ChangeLog README MANIFEST*
}
