NAME=io-socket-ssl-perl
VERSION=0.97
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~behroozi/IO-Socket-SSL-0.97/"
DESC="Implements an object orientedinterface to SSL sockets."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="31K"

SOURCES="http://search.cpan.org/CPAN/authors/id/B/BE/BEHROOZI/IO-Socket-SSL-0.97.tar.gz"

build() {
  cd $SRC/IO-Socket-SSL-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs BUGS Changes README MANIFEST
}
