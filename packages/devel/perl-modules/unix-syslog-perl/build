NAME=unix-syslog-perl
VERSION=0.100
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~mharnisch/Unix-Syslog-0.100/"
DESC="Perl interface to the UNIX system logger."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="11K"
SOURCES="http://search.cpan.org/CPAN/authors/id/M/MH/MHARNISCH/Unix-Syslog-0.100.tar.gz"

build() {
  cd $SRC/Unix-Syslog-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Artistic Changes README MANIFEST
}
