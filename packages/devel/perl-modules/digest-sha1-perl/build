NAME=digest-sha1-perl
VERSION=2.10
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~gaas/Digest-SHA1-2.10/"
DESC="Allows you to use the NIST SHA-1 message digest algorithm."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="37K"

SOURCES="http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/Digest-SHA1-2.10.tar.gz"

build() {
  cd $SRC/Digest-SHA1-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST
}
