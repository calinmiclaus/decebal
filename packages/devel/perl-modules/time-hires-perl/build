NAME=time-hires-perl
VERSION=1.73
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~jhi/Time-HiRes-1.73/"
DESC="High resolution time, sleep, and alarm."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="60K"
SOURCES="http://search.cpan.org/CPAN/authors/id/J/JH/JHI/Time-HiRes-1.73.tar.gz"

build() {
  cd $SRC/Time-HiRes-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST TODO
}
