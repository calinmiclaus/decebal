NAME=convert-tnef-perl
VERSION=0.17
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~dougw/Convert-TNEF-0.17/"
DESC="A interface to most of the zlib compression library."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="11K"

SOURCES="http://search.cpan.org/CPAN/authors/id/D/DO/DOUGW/Convert-TNEF-0.17.tar.gz"

build() {
  cd $SRC/Convert-TNEF-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST
}
