NAME=gnome2-user-docs
VERSION=2.8.1
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="The GNOME2 documentation."
GROUP=gnome
LICENSE="GPLv2 FDLv1.1"
SIZE="1029K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gnome2-user-docs-2.8.1.tar.bz2"
	   
RUNTIME="scrollkeeper"

build() {
  cd $SRC/$NAME-$VERSION

  ./configure --prefix=/opt/gnome \
	      --localstatedir=/var/lib
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* ChangeLog INSTALL NEWS \
    README
}
