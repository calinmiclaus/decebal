NAME=metacity
VERSION=2.10.0
ARCH=i686
RELEASE=1
URL="http://gnome.org/"
DESC="The GNOME Window Manager."
GROUP=gnome
LICENSE="GPLv2"
SIZE="1543K"
HUSE="ipv6 x static"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/metacity-2.10.0.tar.bz2"

BUILDTIME="intltool"

RUNTIME="gconf startup-notification"

build() {
  cd $SRC/$NAME-$VERSION
  
  use ipv6 && OPTS="$OPTS --enable-ipv6"
  use x && OPTS="$OPTS --with-x"
  use static || OPTS="$OPTS --disable-static"
    
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --libexecdir=/opt/gnome/sbin \
	      --mandir=/opt/gnome/share/man $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL HACKING \
    NEWS README
}
