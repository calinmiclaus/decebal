NAME=gnome-menus
VERSION=2.10.0
ARCH=i686
RELEASE=1
URL="http://gnome.org/"
DESC="Specifications for the GNOME menu."
GROUP=gnome
LICENSE="GPLv2 LGPLv2.1"
SIZE="329K"
HUSE="static debug"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gnome-menus-2.10.0.tar.bz2"

BUILDTIME="intltool"

RUNTIME="gnome-vfs"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=yes"
    
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --localstatedir=/var/lib $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* ChangeLog INSTALL HACKING \
    NEWS README
}
