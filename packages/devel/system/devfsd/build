NAME=devfsd
VERSION=1.3.25
ARCH=i686
RELEASE=1
URL="http://www.atnf.csiro.au/~rgooch/linux/"
DESC="Manage devices in /dev in a nice way."
GROUP=base
LICENSE="GPLv2"

SOURCES="http://www.bg.kernel.org/pub/linux/daemons/devfsd/devfsd-v1.3.25.tar.bz2
         devfsd.conf devfsd.init"

BUILDTIME="virtual/kernel-headers"

build() {
  cd $SRC/$NAME
  
  # set out cflags here
  sed -i "s:CFLAGS = -O2:CFLAGS = $CFLAGS:" GNUmakefile
  
  make
  make PREFIX=$PKG MANDIR=$PKG/usr/share/man install
  
  rm -rf $PKG/etc/devfsd.conf
  
  install -D -m 700 ../devfsd.init $PKG/etc/rc.d/devfsd
  install -m 0644 ../devfsd.conf $PKG/etc/devfsd.conf
  
  install_docs COPYING COPYING-2.0 INSTALL
}
