NAME=xfce4-modemlights-plugin
VERSION=0.1.0
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="A PPP configuration/statuc applet for the XFCE4 Desktop."
GROUP=xfce-extra
LICENSE="GPLv2"
SIZE="317K"
HUSE="static debug profile"

SOURCES="http://download.berlios.de/xfce-goodies/xfce4-modemlights-plugin-0.1.0.tar.gz"

BUILDTIME=">=pkgconfig-0.9.0"

RUNTIME=">=xfce4-panel-4.2.0 >=gtk2-2.4.0"

build() {
  cd $SRC/$NAME-$VERSION

  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
        
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      --with-locales-dir=/usr/share/locale \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}
