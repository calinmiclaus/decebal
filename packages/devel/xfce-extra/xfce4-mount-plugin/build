NAME=xfce4-mount-plugin
VERSION=0.2
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="An XFCE applet for mounting/umounting devices."
GROUP=xfce-extra
LICENSE="GPLv2"
SIZE="307K"
HUSE="static debug profile"

SOURCES="http://download.berlios.de/xfce-goodies/xfce4-mount-plugin-0.2.tar.gz"

BUILDTIME="pkgconfig"

RUNTIME=">=xfce4-panel-4.0.0"

build() {
  cd $SRC/$NAME-$VERSION

  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
        
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}

