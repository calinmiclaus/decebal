NAME=xfce4-panel-menu-plugin
VERSION=0.3.1
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="A Panel Menu for the XFCE4 Desktop."
GROUP=xfce-extra
LICENSE="GPLv2"
SIZE="425K"
HUSE="static debug profile"

SOURCES="http://download.berlios.de/xfce4panelmenu/xfce4-panel-menu-plugin-0.3.1.tar.gz"

BUILDTIME="gettext pkgconfig"

RUNTIME=">=xfce4-panel-4.2.0 libxml2 >=dbh-1.0"

build() {
  cd $SRC/$NAME-$VERSION

  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
  
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      --with-locales-dir=/usr/share/locale \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}
