NAME=xfce4-wavelan-plugin
VERSION=0.4.1
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="WaveLAN plugin for the XFce4 panel."
GROUP=xfce-extra
LICENSE=BSDL
SIZE="516K"
HUSE="static profile debug"

SOURCES="http://download.berlios.de/xfce-goodies/xfce4-wavelan-plugin-0.4.1.tar.gz"

BUILDTIME="pkgconfig"

RUNTIME=">=xfce4-panel-4.0.0"

build() {
  cd $SRC/$NAME-$VERSION

  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
	
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS README
}

