NAME=xfce4-minicmd-plugin
VERSION=0.3.0
ARCH=i686
RELEASE=1
DESC="A mini command launcher plugin for the XFCE Panel."
URL="http://www.xfce.org/"
GROUP=xfce-extra
LICENSE="GPLv2"
SIZE="321K"
HUSE="static debug profile"

SOURCES="http://download.berlios.de/xfce-goodies/xfce4-minicmd-plugin-0.3.0.tar.gz"

BUILDTIME="pkgconfig"

RUNTIME=">=xfce4-panel-4.1.90"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
	
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL README
}

