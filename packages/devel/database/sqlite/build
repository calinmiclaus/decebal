NAME=sqlite
VERSION=2.8.16
ARCH=i686
RELEASE=1
URL="http://www.sqlite.org/"
DESC="C library that implements a self-contained, embeddable, zero-configuration SQL database engine (version 2)."
GROUP=database
LICENSE="GPLv2"
SIZE="958K"
HUSE="static debug"

SOURCES="http://www.sqlite.org/sqlite-2.8.16.tar.gz"

RUNTIME="tcl"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug"
  
  mkdir -p build
  cd build
  ../configure --prefix=/usr $OPTS
  make
  make DESTDIR=$PKG install
  
  ( cd $PKG/usr/lib/pkgconfig
    ln -s sqlite3.pc sqlite.pc )
  
  cd ..
  
  install_docs README VERSION
}