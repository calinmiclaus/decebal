NAME=openjade
VERSION=1.3.2
ARCH=i686
RELEASE=1
DESC="The Open Source version of the DSSSL processor Jade."
URL="http://sourceforge.net/projects/openjade"
GROUP=doc-tools
LICENSE=BSDL
SIZE="873K"

SOURCES="http://download.sourceforge.net/openjade/openjade-1.3.2.tar.gz"

BUILDTIME=">=opensp-1.5.1"

RUNTIME=">=opensp-1.5.1"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr \
    	      --enable-http \
              --disable-static \
              --enable-default-catalog=/etc/sgml/catalog \
              --enable-default-search-path=/usr/share/sgml \
              --datadir=/usr/share/sgml/openjade-1.3.2
  make
  make prefix=$PKG/usr install
  
  ln -s openjade $PKG/usr/bin/jade
  ln -s libogrove.so $PKG/usr/lib/libgrove.so
  ln -s libospgrove.so $PKG/usr/lib/libspgrove.so
  ln -s libostyle.so $PKG/usr/lib/libstyle.so
  
  install -D -m 0644 dsssl/catalog $PKG/usr/share/sgml/openjade-1.3.2/catalog
  
  cp dsssl/*.dtd $PKG/usr/share/sgml/openjade-1.3.2/
  cp dsssl/*.dsl $PKG/usr/share/sgml/openjade-1.3.2/
  cp dsssl/*.sgm $PKG/usr/share/sgml/openjade-1.3.2/
  
  install_docs COPYING ChangeLog FILES NEWS README VERSION
}

