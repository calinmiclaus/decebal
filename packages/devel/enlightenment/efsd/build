NAME=efsd
VERSION=21052005
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="The Enlightenment File System Daemon."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="223K"
HUSE="static"

SOURCES="efsd-21052005.tar.bz2"

RUNTIME="=edb-21052005 fam >=libxml2-2.3.10"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  cp Makefile.am Makefile.in
  
  ./autogen.sh
  CPPFLAGS="$CPPFLAGS -I/opt/enlightenment/include" \
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING INSTALL ChangeLog \
    NEWS README NEWS
}
