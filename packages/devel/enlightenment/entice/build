NAME=entice
VERSION=0.9.3.004
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="Entice is an image viewer using enlightenment libraries."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="860K"
HUSE="static"

#http://enlightenment.freedesktop.org/fetch.php?file=entice-0.9.3.004.tar.gz
SOURCES="$NAME-$VERSION.tar.gz"

RUNTIME="=evas-0.9.9.013 =ecore-0.9.9.013 =edb-1.0.5.004 =edje-0.5.0.013
=esmart-0.9.0.004 gimp"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
#  ./autogen.sh
  CPPFLAGS="$CPPFLAGS -I/opt/enlightenment/include" \
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* INSTALL ChangeLog \
    NEWS README
}
