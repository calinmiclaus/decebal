NAME=engrave
VERSION=21052005
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="A library for editing the contents of an edje .eet file."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="41K"
HUSE="static"

SOURCES="engrave-21052005.tar.bz2"

RUNTIME="=evas-21052005 =ecore-21052005"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  use nls || OPTS="$OPTS --disable-nls"
  
  ./autogen.sh
  CPPFLAGS="$CPPFLAGS -I/opt/enlightenment/include" \
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* INSTALL ChangeLog \
    NEWS README TODO
}
