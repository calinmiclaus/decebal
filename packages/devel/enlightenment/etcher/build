NAME=etcher
VERSION=21052005
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="A graphical theme ``ebits'' editor for Enlightenment."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="229K"
HUSE="static"

SOURCES="etcher-21052005.tar.bz2"

RUNTIME="=evas-21052005 gtk"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  ./autogen.sh
  CPPFLAGS="$CPPFLAGS -I/opt/enlightenment/include" \
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* INSTALL ChangeLog \
    NEWS README
}
