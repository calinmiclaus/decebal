NAME=netkit-base
VERSION=0.17
ARCH=i686
RELEASE=1
URL="ftp://ftp.uk.linux.org/pub/linux/Networking/netkit/"
DESC="The Internet Super daemon (inetd)."
GROUP=network
LICENSE=GPLv2
SIZE="55K"

SOURCES="ftp://ftp.uk.linux.org/pub/linux/Networking/netkit/netkit-base-0.17.tar.gz
         inetd.conf inetd.init"

BACKUPS="etc/inetd.conf"

RUNTIME="tcp-wrappers"

build() {
  cd $SRC/$NAME-$VERSION
  
  mkdir -p $PKG/usr/{sbin,man/man8}
  
  ./configure --prefix=/usr
  make
  make INSTALLROOT=$PKG install
  
  # we dont need ping here.
  rm -rf $PKG/bin $PKG/usr/man/man8/ping.8
  
  install -D -m 0644 ../inetd.conf $PKG/etc/inetd.conf
  install -D -m 0700 ../inetd.init $PKG/etc/rc.d/inetd
  
  install_docs BUGS ChangeLog MCONFIG MRULES README
}
