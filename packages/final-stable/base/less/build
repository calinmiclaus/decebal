NAME=less
VERSION=381
ARCH=i686
RELEASE=1
URL="http://www.greenwoodsoftware.com/less/"
DESC="A program similar to more, with more options ."
GROUP=base
LICENSE="GPLv2"
SIZE="259K"

SOURCES="http://www.greenwoodsoftware.com/less/less-381.tar.gz
         lessfilter lessecho.1"

RUNTIME=">=ncurses-5.3"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
	      --libexecdir=/usr/bin \
	      --infodir=/usr/share/info \
	      --mandir=/usr/share/man \
  make
  make prefix=$PKG/usr install
  
  install -D -m 0644 ../lessecho.1 $PKG/usr/share/man/man1/lessecho.1
  install -m 0755 ../lessfilter $PKG/usr/bin/lessfilter
  
  install_docs COPYING INSTALL LICENSE NEWS README
}

  
  
