NAME=diffutils
VERSION=2.8.1
ARCH=i686
RELEASE=1
URL="http://www.gnu.org/software/diffutils/"
DESC="This package contains the GNU diff, diff3, sdiff, and cmp utilities."
GROUP=base
LICENSE=GPLv2
SIZE="761K"

SOURCES="http://ftp.gnu.org/pub/gnu/diffutils/diffutils-2.8.1.tar.gz"

RUNTIME="libc bash"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr \
              --infodir=/usr/share/info \
	      --mandir=/usr/share/man
  make
  make DESTDIR=$PKG install
  
  install_docs ABOUT-NLS AUTHORS COPYING ChangeLog INSTALL \
    INSTALLME NEWS README THANKS
}
