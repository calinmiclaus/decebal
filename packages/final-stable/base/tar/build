NAME=tar
VERSION=1.15.1
ARCH=i686
RELEASE=2
URL="http://www.gnu.org/software/tar/tar.html"
DESC="GNU tar used to store, backup and transport files."
GROUP=base
LICENSE=GPLv2
SIZE="1573K"

SOURCES="http://ftp.gnu.org/gnu/tar/tar-1.15.1.tar.bz2 tar.1"

BUILDTIME="gettext" 

RUNTIME="gzip bzip2"

build() {
  cd $SRC/$NAME-$VERSION
  
  use nls && OPTS="--enable-nls" || OPTS="--disable-nls"
  
  ./configure --prefix=/usr \
              --bindir=/bin \
	      --libexecdir=/usr/sbin \
	      --disable-dependency-tracking \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install -D -m 0644 ../tar.1 $PKG/usr/share/man/man1/tar.1
  
  install_docs ABOUT-NLS AUTHORS COPYING ChangeLog* INSTALL \
        NEWS PORTS README* TODO
}
