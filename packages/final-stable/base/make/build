NAME=make
VERSION=3.80
ARCH=i686
RELEASE=2
URL="http://www.gnu.org/software/make/"
DESC="Controls the generation of executables and other compile-related tasks."
GROUP=base
LICENSE="GPLv2"
SIZE="899K"
HUSE="nls"

SOURCES="ftp://ftp.gnu.org/gnu/make/make-3.80.tar.bz2"

RUNTIME="libc"

build() {
  cd $SRC/$NAME-$VERSION
  
  use nls || OPTS="--disable-nls"

  ./configure --prefix=/usr \
              --infodir=/usr/share/info \
	      --mandir=/usr/share/man $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs ABOUT-NLS AUTHORS COPYING ChangeLog INSTALL NEWS \
    README README.Amiga README.DOS README.W32 README.customs SCOPTIONS
}
