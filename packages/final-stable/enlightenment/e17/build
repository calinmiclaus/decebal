NAME=e17
VERSION=0.16.999.013
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="The Enlightenment Desktop."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="40584K"
HUSE="static nls"

#http://enlightenment.freedesktop.org/fetch.php?file=enlightenment-0.16.999.013.tar.gz
SOURCES="enlightenment-$VERSION.tar.gz xinitrc.enlightenment"

RUNTIME="=evas-0.9.9.013 =eet-0.9.10.013 >=edb-1.0.5.004 =embryo-0.9.1.013
=edje-0.5.0.013"

build() {
  cd $SRC/enlightenment-$VERSION
  
  use static || OPTS="--disable-static"
  use nls || OPTS="$OPTS --disable-nls"
  
#  ./autogen.sh
  CPPFLAGS="$CPPFLAGS -I/opt/enlightenment/include" \
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  mkdir -p $PKG/etc/X11/xinit
  cp $SRC/xinitrc.enlightenment $PKG/etc/X11/xinit

  install_docs ABOUT-NLS AUTHORS COPYING* INSTALL ChangeLog \
    NEWS README TODO
}
