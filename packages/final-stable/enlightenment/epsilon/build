NAME=epsilon
VERSION=0.3.0.004
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="A small, display independent, and quick thumbnailing library."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="327K"
HUSE="static"

#http://enlightenment.freedesktop.org/fetch.php?file=epsilon-0.3.0.004.tar.gz
SOURCES="$NAME-$VERSION.tar.gz"

RUNTIME="=epeg-0.9.0.004 >=imlib2-1.0.0 libpng"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
#  echo $PATH
  
#  ./autogen.sh
  CPPFLAGS="$CPPFLAGS -I/opt/enlightenment/include" \
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment \
	      --with-epeg=/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* INSTALL ChangeLog \
    NEWS README
}
