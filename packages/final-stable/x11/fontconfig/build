NAME=fontconfig
VERSION=2.3.2
ARCH=i686
RELEASE=1
URL="http://www.freedesktop.org/software/fontconfig"
DESC="A font configuration and customization library."
GROUP=x11
LICENSE=BSDL
SIZE="613K"

SOURCES="http://fontconfig.org/release/$NAME-$VERSION.tar.gz"

BACKUPS="etc/fonts/fonts.conf
         etc/fonts/fonts.dtd
         etc/fonts/local.conf"

RUNTIME=">=zlib-1.1.4 >=freetype2-2.1.7 >=freetype-1.3.1 expat"

build() {
  cd $SRC/$NAME-$VERSION
      
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
	      --infodir=/usr/share/info \
	      --mandir=/usr/share/man \
	      --localstatedir=/var/lib \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS README
}
