NAME=scorched3d
VERSION=38.1
ARCH=i686
RELEASE=1
URL="http://www.scorched3d.co.uk/"
DESC="A game based loosely on the classic DOS game Scorched Earth."
GROUP=games
LICENSE="GPLv2"
SIZE="23772K"

SOURCES="http://heanet.dl.sourceforge.net/sourceforge/scorched3d/Scorched3D-38.1-src.tar.gz"

RUNTIME=">=libsdl-1.2.5 sdl_net sdl_mixer >=wxwidgets-2.4.0 freetype2"

build() {
  cd $SRC/scorched
  
#              --exec_prefix=/usr/games/bin \
  ./configure --prefix=/usr/games \
	      --datadir=/usr/games/share \
	      --with-docdir=/usr/share/doc/$NAME-$VERSION \
              --disable-dependency-tracking
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COMPILING COPYING README TODO
}
