post_install() {
  schemas="/etc/opt/gnome/gconf/schemas/gdict.schemas
    /etc/opt/gnome/gconf/schemas/gdict.schemas/gfloppy.schemas  
    /etc/opt/gnome/gconf/schemas/gdict.schemas/gnome-screenshot.schemas
    /etc/opt/gnome/gconf/schemas/gdict.schemas/gnome-search-tool.schemas
    /etc/opt/gnome/gconf/schemas/gdict.schemas/logview.schemas"

  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-install-rule "$schema" > /dev/null 2>&1
  done    
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1
  /usr/bin/update-desktop-database >/dev/null 2>&1
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper > /dev/null 2>&1
}

post_upgrade() {
  schemas="/etc/opt/gnome/gconf/schemas/gdict.schemas
    /etc/opt/gnome/gconf/schemas/gdict.schemas/gfloppy.schemas  
    /etc/opt/gnome/gconf/schemas/gdict.schemas/gnome-screenshot.schemas
    /etc/opt/gnome/gconf/schemas/gdict.schemas/gnome-search-tool.schemas
    /etc/opt/gnome/gconf/schemas/gdict.schemas/logview.schemas"

  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-install-rule "$schema" > /dev/null 2>&1
  done    
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1
  /usr/bin/update-desktop-database >/dev/null 2>&1
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper > /dev/null 2>&1
}

pre_remove() {
  schemas="/etc/opt/gnome/gconf/schemas/gdict.schemas
    /etc/opt/gnome/gconf/schemas/gdict.schemas/gfloppy.schemas  
    /etc/opt/gnome/gconf/schemas/gdict.schemas/gnome-screenshot.schemas
    /etc/opt/gnome/gconf/schemas/gdict.schemas/gnome-search-tool.schemas
    /etc/opt/gnome/gconf/schemas/gdict.schemas/logview.schemas"

  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-uninstall-rule "$schema" > /dev/null 2>&1
  done    
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1
}

post_remove() {
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper > /dev/null 2>&1
  /usr/bin/update-desktop-database >/dev/null 2>&1
}
