NAME=gnome-themes
VERSION=2.10.0
ARCH=i686
RELEASE=1
URL="http://gnome.org/"
DESC="The GNOME Themes."
GROUP=gnome
LICENSE="GPLv2"
SIZE="2509K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gnome-themes-2.10.0.tar.bz2"

RUNTIME="gtk-engines"

build() {
  cd $SRC/$NAME-$VERSION

  ./configure --prefix=/usr \
	      --enable-all-themes
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* ChangeLog INSTALL \
    NEWS README
}
