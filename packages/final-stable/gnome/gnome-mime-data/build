NAME=gnome-mime-data
VERSION=2.4.2
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="The base MIME and Application database for GNOME."
GROUP=gnome
LICENSE=GPLv2
SIZE="829K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/sources/gnome-mime-data/2.4/gnome-mime-data-2.4.2.tar.bz2"

RUNTIME=">=shared-mime-info-0.14"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --localstatedir=/var/lib
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS README
}
