NAME=libgnomecups
VERSION=0.2.0
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="GNOME Cups library."
GROUP=gnome
LICENSE="GPLv2 LGPLv2"
SIZE="303K"
HUSE="static"

SOURCES="http://ftp.linux.org.uk/mirrors/ftp.gnome.org/sources/libgnomecups/0.2/libgnomecups-0.2.0.tar.bz2"

RUNTIME=">=cups-1.1.20 >=glib2-2.4.2 gnome-common"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
    
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --localstatedir=/var/lib $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* ChangeLog INSTALL NEWS README
}
 
	   