NAME=libgnomeprintui
VERSION=2.10.0.1
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="User Interface library for printing with GNOME."
GROUP=gnome
LICENSE="GPLv2 LGPLv2"
SIZE="610K"
HUSE="gtkdoc static"

SOURCES="ftp://ftp.gnome.org/pub/gnome/platform/2.10/2.10.0/sources/libgnomeprintui-2.10.0.1.tar.bz2"

RUNTIME=">=xorg-6.7 >=gtk2-2.4.0 >=libgnomeprint-2.7.1 >=libgnomecanvas-1.117.0 >=gnome-icon-theme-1.1.92"

use gtk-doc && BUILDTIME="gtk-doc"

build() {
  cd $SRC/$NAME-$VERSION
  
  use gtk-doc && OPTS="--enable-gtk-doc" || OPTS="--disable-gtk-doc"
  use static || OPTS="$OPTS --disable-static"
    
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --localstatedir=/var/lib \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* ChangeLog INSTALL NEWS README OChangeLog*
}
