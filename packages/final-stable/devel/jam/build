NAME=jam
VERSION=2.5
ARCH=i686
RELEASE=1
URL="http://www.perforce.com/jam/jam.html"
DESC="A powerful, multi-platform make replacement."
GROUP=devel
LICENSE="BSDL"
SIZE="600K"

SOURCES="ftp://ftp.perforce.com/pub/jam/jam-2.5.tar"

build() {
  cd $SRC/$NAME-$VERSION
  
  make
  
  install -D -m 0755 bin.linuxx86/jam $PKG/usr/bin/jam
  install -D -m 0755 bin.linuxx86/mkjambase $PKG/usr/bin/mkjambase  
  install -D -m 0644 bin.linuxx86/libjam.a $PKG/usr/lib/libjam.a
  
  install_docs Porting README RELNOTES
}
