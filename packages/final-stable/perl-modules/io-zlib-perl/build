NAME=io-zlib-perl
VERSION=1.04
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~tomhughes/IO-Zlib-1.04/"
DESC="Provides an IO:: style interface to the Compress::Zlib package."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="9K"

SOURCES="http://search.cpan.org/CPAN/authors/id/T/TO/TOMHUGHES/IO-Zlib-1.04.tar.gz"

build() {
  cd $SRC/IO-Zlib-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs SIGNATURE ChangeLog README MANIFEST
}
