NAME=mail-spf-query-perl
VERSION=1.997
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~freeside/Mail-SPF-Query-1.997/"
DESC="Determines the legitimacy of an SMTP client IP."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="48K"

SOURCES="http://search.cpan.org/CPAN/authors/id/F/FR/FREESIDE/Mail-SPF-Query-1.997.tar.gz"

RUNTIME="net-dns-perl
         net-cidr-lite-perl
	 sys-hostname-long-perl
	 uri-perl"

build() {
  cd $SRC/Mail-SPF-Query-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST
}
