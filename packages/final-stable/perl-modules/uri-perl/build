NAME=uri-perl
VERSION=1.35
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~gaas/URI-1.35/"
DESC="Implements the URI class in perl."
GROUP=perl-modules
LICENSE=ARTISTIC
SOURCES="http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/URI-1.35.tar.gz"
SIZE="93K"

build() {
  cd $SRC/URI-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST
}
