NAME=dbd-mysql-perl
VERSION=3.0002
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~rudy/DBD-mysql-3.0002/"
DESC="A Perl5 Database Interface to the MySQL database."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="127K"

SOURCES="http://search.cpan.org/CPAN/authors/id/C/CA/CAPTTOFU/DBD-mysql-3.0002.tar.gz"

RUNTIME="dbi-perl
         mysql"

build() {
  cd $SRC/DBD-mysql-$VERSION

  perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs ChangeLog README MANIFEST* INSTALL.html TODO
}
