NAME=storable-perl
VERSION=2.13
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~ams/Storable-2.13/"
DESC="The Storable extension brings persistency to your data."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="131K"
SOURCES="http://search.cpan.org/CPAN/authors/id/A/AM/AMS/Storable-2.13.tar.gz"

build() {
  cd $SRC/Storable-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs ChangeLog README MANIFEST
}
