NAME=libnet-perl
VERSION=1.19
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~gbarr/libnet-1.19/"
DESC="Consistent API to the client side of various protocols."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="63K"

SOURCES="http://search.cpan.org/CPAN/authors/id/G/GB/GBARR/libnet-1.19.tar.gz"

PROVIDES="net-ftp-perl
          net-smtp-perl
	  net-time-perl
	  net-nntp-perl
	  net-pop3-perl"

build() {
  cd $SRC/libnet-$VERSION

  echo "y"|perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST SIGNATURE
}
