NAME=net-server-perl
VERSION=0.88
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~bbb/Net-Server-0.88/"
DESC="Extensible, general Perl server engine."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="69K"
SOURCES="http://search.cpan.org/CPAN/authors/id/R/RH/RHANDOM/Net-Server-0.88.tar.gz"

build() {
  cd $SRC/Net-Server-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST*
}
