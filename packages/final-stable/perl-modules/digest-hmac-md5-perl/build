NAME=digest-hmac-md5-perl
VERSION=1.01
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~gaas/Digest-HMAC-1.01/"
DESC="Keyed-Hashing for Message Authentication."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="13K"

SOURCES="http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/Digest-HMAC-1.01.tar.gz"

build() {
  cd $SRC/Digest-HMAC-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST
}
