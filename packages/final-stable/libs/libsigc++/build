NAME=libsigc++
VERSION=2.0.12
ARCH=i686
RELEASE=1
URL="http://libsigc.sourceforge.net/"
DESC="A callback framework for C++."
GROUP=libs
LICENSE="GLGPLv2.1"
SIZE="1547K"
HUSE="static"

SOURCES="http://ftp.gnome.org/pub/GNOME/sources/libsigc++/2.0/libsigc++-2.0.12.tar.bz2"

BUILDTIME="pkgconfig"

RUNTIME="gcc"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  ./configure --prefix=/usr $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO
}