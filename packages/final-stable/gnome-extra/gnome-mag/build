NAME=gnome-mag
VERSION=0.12.0
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="Contains the gnome magnification service definition and sample implementation."
GROUP=gnome-extra
LICENSE="LGPLv2.1"
SIZE="319K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gnome-mag-0.12.0.tar.bz2"

RUNTIME=">=at-spi-1.5.0 >=libbonobo-1.107.0 >=orbit2-2.3.100 >=glib2-1.3.11 >=gtk2-2.1.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/opt/gnome
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}
