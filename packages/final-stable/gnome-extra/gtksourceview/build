NAME=gtksourceview
VERSION=1.2.0
ARCH=i686
RELEASE=1
URL="http://gnome.org/"
DESC="A text widget that extends the standard gtk+ 2.x text widget GtkTextView."
GROUP=gnome-extra
LICENSE="LGPLv2.1"
SIZE="862K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gtksourceview-1.2.0.tar.bz2"

BUILDTIME="libgnomeprintui intltool"

RUNTIME="libgnomeprint gtk2"

build() {
  cd $SRC/$NAME-$VERSION

  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* ChangeLog INSTALL NEWS README \
    MAINTAINERS HACKING TODO
}
