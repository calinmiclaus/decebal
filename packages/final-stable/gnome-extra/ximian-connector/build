NAME=ximian-connector
VERSION=2.2.0
ARCH=i686
RELEASE=1
URL="http://www.ximian.com/"
DESC="Adds support for Microsoft Exchange 2000 and 2003 to Evolution."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="1213K"
HUSE="static gtkdoc"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/ximian-connector-2.2.0.tar.bz2"

BUILDTIME="intltool"

RUNTIME=">=evolution-2.2.0 heimdal"

use gtkdoc && BUILDTIME="$BUILDTIME gtkdoc"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  use gtkdoc && OPTS="$OPTS --enable-gtk-doc"
  
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --disable-schemas-install $OPTS
  make
  make DESTDIR=$PKG install	      
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}