NAME=gpdf
VERSION=2.10.0
ARCH=i686
RELEASE=1
URL="http://gnome.org/"
DESC="A PDF viewer for the GNOME Desktop."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="1054K"
HUSE="paper"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gpdf-2.10.0.tar.bz2"

BUILDTIME="intltool"

RUNTIME=">=libgnomeui-2.0 libgnomeprintui"

use paper && RUNTIME="$RUNTIME libpaper"

build() {
  cd $SRC/$NAME-$VERSION

  find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
  if [ -f omf.make ]; then
    sed -i -e 's/-scrollkeeper-update.*//' omf.make
  fi
  
  use paper && OPTS="--with-libpaper-library" || OPTS="--without-libpaper-library"
  	 
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --libexecdir=/opt/gnome/bin \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS CHANGES COPYING ChangeLog INSTALL \
    NEWS README*
}
