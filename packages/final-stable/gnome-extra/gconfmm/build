NAME=gconfmm
VERSION=2.9.2
ARCH=i686
RELEASE=1
URL="http://gtkmm.sourceforge.net/"
DESC="C++ bindings for GConf."
GROUP=gnome-extra
LICENSE="GPLv2 LGPLv2.1"
SIZE="265K"
HUSE="static"

SOURCES="ftp://ftp.gnome.org/pub/gnome/bindings/2.10/2.10.0/sources/c++/gconfmm-2.9.2.tar.bz2"

BUILDTIM=="pkgconfig"

RUNTIME=">=gconf-2.4.0 >=glibmm-2.4.0 >=gtkmm2-2.4.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  ./configure --prefix=/opt/gnome $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* ChangeLog INSTALL \
    NEWS README
}
