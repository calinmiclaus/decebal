NAME=eog
VERSION=2.9.0
ARCH=i686
RELEASE=1
URL="http://gnome.org/"
DESC="An image viewing and cataloging program."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="823K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/eog-2.9.0.tar.bz2"

BUILDTIME="intltool"

RUNTIME="eel libjpeg libexif"

build() {
  cd $SRC/$NAME-$VERSION

  find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
  if [ -f omf.make ]; then
    sed -i -e 's/-scrollkeeper-update.*//' omf.make
  fi

  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS README \
    MAINTAINERS DEPENDS HACKING THANKS TODO
}
