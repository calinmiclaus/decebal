NAME=gtranslator
VERSION=1.1.6
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="The GNOME 2.x translation making program."
GROUP=gnome-extra
LICENSE=GPLv2
SIZE="928K"
HUSE="debug"

SOURCES="http://ftp.gnome.org/pub/GNOME/sources/gtranslator/1.1/gtranslator-1.1.6.tar.bz2"

BUILDTIME="intltool"

RUNTIME=">=libgnomeui-1.105.0 >=gtkspell-2.0.2"

build() {
  cd $SRC/$NAME-$VERSION
  
  use debug && OPTS="--enable-debug" || OPTS="--disable-debug"
  
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --mandir=/opt/gnome/share/man \
	      --localstatedir=/var/lib \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog DEPENDS HACKING INSTALL \
    NEWS README TODO THANKS
}

