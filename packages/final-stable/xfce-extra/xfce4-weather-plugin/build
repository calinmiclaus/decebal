NAME=xfce4-weather-plugin
VERSION=0.4.9
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="A weather report plugin for the XFCE Panel."
GROUP=xfce-extra
LICENSE=BSDL
SIZE="627K"
HUSE="static debug profile"

SOURCES="http://download.berlios.de/xfce-goodies/xfce4-weather-plugin-0.4.9.tar.gz"

BUILDTIME="gettext pkgconfig"

RUNTIME=">=xfce4-panel-4.1.90"

build() {
  cd $SRC/$NAME-$VERSION

  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
	
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS README
}
