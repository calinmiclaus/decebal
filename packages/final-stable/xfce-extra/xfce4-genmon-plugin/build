NAME=xfce4-genmon-plugin
VERSION=1.1
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="Launch a program and display its output into the panel."
GROUP=xfce-extra
LICENSE=GPLv2
SIZE="224K"
HUSE="static debug profile"

SOURCES="http://download.berlios.de/xfce-goodies/xfce4-GenMon-plugin-1.1.tar.gz"

BUILDTIME="pkgconfig"

RUNTIME=">=xfce4-panel-4.0.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
	
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL README NEWS
}
