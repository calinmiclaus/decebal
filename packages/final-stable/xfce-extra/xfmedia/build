NAME=xfmedia
VERSION=0.7.1
ARCH=i686
RELEASE=1
URL="http://spuriousinterrupt.org/projects/xfmedia/"
DESC="A simple, easy-to-use media player based on the xine engine."
GROUP=xfce-extra
LICENSE="GPLv2"
SIZE="743K"
HUSE="static debug profile"

SOURCES="http://spuriousinterrupt.org/projects/xfmedia/files/xfmedia-0.7.1.tar.bz2"

BUILDTIME=">=pkgconfig-0.9.0"

RUNTIME=">=glib2-2.0.6 >=gtk2-2.4.0 >=libxfce4util-4.1.3 >=xine-lib-1.0 >=libxfcegui4-4.1.99.3 >=exo-0.3
         >=startup-notification-0.5 dbus"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=yes"
  use profile && OPTS="$OPTS --enable-profiling"
  
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      --enable-startup-notification \
	      --enable-exo \
	      --disable-dbus \
	      --enable-final $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README* TODO
}
