NAME=dbh
VERSION=1.0.24
ARCH=i686
RELEASE=1
DESC="A library to create Disk Based Hashtables on POSIX systems."
URL="http://sourceforge.net/projects/dbh/"
GROUP=xfce
LICENSE=GPLv2
SIZE="362K"
HUSE="static debug"

SOURCES="http://www.us.xfce.org/archive/xfce-4.2.2/src/dbh-1.0.24.tar.gz"

RUNTIME="libc"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  
  ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS \
    README TODO
}
