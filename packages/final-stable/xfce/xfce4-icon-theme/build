NAME=xfce4-icon-theme
VERSION=4.2.2
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="The Rodent icon theme for XFCE."
GROUP=xfce
LICENSE=GPLv2
SIZE="1524K"

SOURCES="http://www.us.xfce.org/archive/xfce-4.2.2/src/xfce4-icon-theme-4.2.2.tar.gz"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS \
    README TODO
}
 
