NAME=xfprint
VERSION=4.2.2
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="Printing system support for the Xfce4 desktop environment."
GROUP=xfce
LICENSE=BSDL
SIZE="938K"
HUSE="bsdlpr static debug profile"

SOURCES="http://www.us.xfce.org/archive/xfce-4.2.2/src/xfprint-4.2.2.tar.gz"

BUILDTIME="gettext >=pkgconfig-0.9.0"

RUNTIME=">=libxfcegui4-4.1.99.1 >=a2ps-4.13b >=cups-1.1.20 >=gtk2-2.2.0 >=libxfce4util-4.2.0
         >=xfce-mcs-manager-4.2.0"

build() {
  cd $SRC/$NAME-$VERSION

  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
  use bsdlpr && OPTS="$OPTS --enable-bsdlpr"

  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      --with-locales-dir=/usr/share/locale \
	      --enable-cups \
	      --enable-final \
	      $OPTS
  make
  make DESTDIR=$PKG install

  install_docs AUTHORS COPYING ChangeLog INSTALL README \
    NEWS TODO NOTES
}
