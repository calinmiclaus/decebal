NAME=xfwm4
VERSION=4.2.2
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="XFCE Window Manager."
GROUP=xfce
LICENSE=BSDL
SIZE="1524K"
HUSE="compositor static debug profile"

SOURCES="http://www.us.xfce.org/archive/xfce-4.2.2/src/xfwm4-4.2.2.tar.gz"

BUILDTIME="gettext >=pkgconfig-0.9.0"

RUNTIME=">=xfce-mcs-manager-4.2.0 >=startup-notification-0.5 >=gtk2-2.2.0 >=libxfce4util-4.2.0
         >=libxfcegui4-4.2.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="$OPTS --enable-static" || OPTS="$OPTS --disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
  
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      --with-locales-dir=/usr/share/locale \
	      --enable-startup-notification \
	      --enable-randr \
	      --enable-compositor \
	      --enable-final \
	      $OPTS
  make
  make DESTDIR=$PKG install

  install_docs AUTHORS COMPOSITOR COPYING ChangeLog INSTALL README \
    NEWS TODO
}
