NAME=alsa-tools
VERSION=1.0.8
ARCH=i686
RELEASE=1
URL="http://www.alsa-project.org/"
DESC="Tools for the ALSA Sound System."
GROUP=multimedia
LICENSE="GPLv2"
SIZE="801K"

SOURCES="ftp://ftp.alsa-project.org/pub/tools/alsa-tools-1.0.8.tar.bz2"

RUNTIME=">=alsa-lib-1.0.8 gtk xorg"

build() {
  cd $SRC/$NAME-$VERSION
  
  for DIR in `ls`
  do
    ( cd $DIR
      ./configure --prefix=/usr
      make
      make DESTDIR=$PKG install )
  done
}


