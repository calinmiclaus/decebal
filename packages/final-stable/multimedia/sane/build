NAME=sane
VERSION=1.0.15
ARCH=i686
RELEASE=1
DESC="Scanner Access Now Easy."
URL="http://www.sane-project.org/"
GROUP=multimedia
LICENSE="GPLv2"

SOURCES="http://alioth.debian.org/download.php/817/sane-backends-1.0.15.tar.gz"

BACKUPS="etc/sane.d/abaton.conf
         etc/sane.d/dc25.conf
         etc/sane.d/microtek2.conf
         etc/sane.d/sharp.conf
         etc/sane.d/agfafocus.conf
         etc/sane.d/dll.conf
