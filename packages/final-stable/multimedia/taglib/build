NAME=taglib
VERSION=1.0
ARCH=i686
RELEASE=1
URL="http://ktown.kde.org/~wheeler/taglib"
DESC="A library for reading and editing the meta-data of several popular audio formats."
GROUP=multimedia
LICENSE="GPLv2"

SOURCES="http://ktown.kde.org/~wheeler/taglib/taglib-1.0.tar.gz"

function build() {
    cd $SRC/$NAME-$VERSION
    ./configure --prefix=/usr
    make || return 1
    make DESTDIR=$PKG install || return 1
    install_docs AUTHORS COPYING ChangeLog INSTALL README TODO
}

    
