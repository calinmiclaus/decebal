NAME=alsa-firmware
VERSION=1.0.8
ARCH=i686
RELEASE=1
URL="http://www.alsa-project.org"
DESC="The firmware binaries for each loader program included in alsa-tools package."
GROUP=multimedia
LICENSE="GPLv2"
SIZE="1527K"

SOURCES="ftp://ftp.alsa-project.org/pub/firmware/alsa-firmware-1.0.8.tar.bz2"

RUNTIME=">=alsa-tools-1.0.8"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install
  
  install_docs 
}


