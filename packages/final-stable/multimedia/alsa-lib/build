NAME=alsa-lib
VERSION=1.0.8
ARCH=i686
RELEASE=1
URL="http://www.alsa-project.org/"
DESC="The ALSA userland library."
GROUP=multimedia
LICENSE="GPLv2"
SIZE="666K"
HUSE="static debug"

SOURCES="ftp://ftp.alsa-project.org/pub/lib/alsa-lib-1.0.8.tar.bz2"

RUNTIME="libc"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static"
  use debug && OPTS="$OPTS --with-debug=yes"
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
	      --localstatedir=/var/lib \
	      --infodir=/usr/share/info \
	      --mandir=/usr/share/man $OPTS
  make
  make DESTDIR=$PKG install

  install_docs COPYING MEMORY-LEAK INSTALL ChangeLog NOTES TODO
}
