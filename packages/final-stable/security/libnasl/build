NAME=libnasl
VERSION=2.3.0
ARCH=i686
RELEASE=2
URL="http://www.nessus.com"
DESC="libnasl"
GROUP=security
LICENSE="GPLv2"
SIZE="358K"
HUSE="static"

SOURCES="http://ftp.gwdg.de/pub/linux/misc/nessus/nessus-2.3.0/src/libnasl-2.3.0.tar.gz"

RUNTIME="nessus-libraries"

build() {
  cd $SRC/$NAME

  use static && OPTS="--enable-static" || OPTS="--disable-static"

  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --libexecdir=/usr/bin \
              --infodir=/usr/share/info \
              --mandir=/usr/share/man \
	      --localstatedir=/var/lib \
	      $OPTS
  make
  make prefix=$PKG/usr install


  install_docs COPYING INSTALL VERSION
}
