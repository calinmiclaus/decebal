NAME=nessus-libraries
VERSION=2.3.0
ARCH=i686
RELEASE=2
URL="http://www.nessus.com"
DESC="Nessus libraries."
GROUP=security
LICENSE="GPLv2"
SIZE="414K"
HUSE="cipher static debug"

SOURCES="http://ftp.gwdg.de/pub/linux/misc/nessus/nessus-2.3.0/src/nessus-libraries-2.3.0.tar.gz"

RUNTIME=">=openssl-0.9.7e"

build() {
  cd $SRC/$NAME

  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug"
  use cipher && OPTS="$OPTS --enable-cipher"

  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --libexecdir=/usr/bin \
              --infodir=/usr/share/info \
              --mandir=/usr/share/man \
	      --localstatedir=/var/lib \
	      --with-ssl \
	      $OPTS
	      
  make
  make prefix=$PKG/usr install

  install_docs INSTALL_README  README* VERSION 
}
