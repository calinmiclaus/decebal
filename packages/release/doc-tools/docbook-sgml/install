post_install() {
  install-catalog --add /etc/sgml/sgml-docbook-dtd-3.1.cat \
    /usr/share/sgml/docbook/sgml-dtd-3.1/catalog &>/dev/null
  install-catalog --add /etc/sgml/sgml-docbook-dtd-3.1.cat \
    /etc/sgml/sgml-docbook.cat &>/dev/null
  install-catalog --add /etc/sgml/sgml-docbook-dtd-4.3.cat \
    /usr/share/sgml/docbook/sgml-dtd-4.3/catalog &>/dev/null
  install-catalog --add /etc/sgml/sgml-docbook-dtd-4.3.cat \
    /etc/sgml/sgml-docbook.cat &>/dev/null
}

post_upgrade() {
  install-catalog --add /etc/sgml/sgml-docbook-dtd-3.1.cat \
    /usr/share/sgml/docbook/sgml-dtd-3.1/catalog &>/dev/null
  install-catalog --add /etc/sgml/sgml-docbook-dtd-3.1.cat \
    /etc/sgml/sgml-docbook.cat &>/dev/null
  install-catalog --add /etc/sgml/sgml-docbook-dtd-4.3.cat \
    /usr/share/sgml/docbook/sgml-dtd-4.3/catalog &>/dev/null
  install-catalog --add /etc/sgml/sgml-docbook-dtd-4.3.cat \
    /etc/sgml/sgml-docbook.cat &>/dev/null
}

post_remove() {
  install-catalog --remove /etc/sgml/sgml-docbook-dtd-3.1.cat \
    /usr/share/sgml/docbook/sgml-dtd-3.1/catalog &>/dev/null
  install-catalog --remove /etc/sgml/sgml-docbook-dtd-3.1.cat \
    /etc/sgml/sgml-docbook.cat &>/dev/null
  install-catalog --remove /etc/sgml/sgml-docbook-dtd-4.3.cat \
    /usr/share/sgml/docbook/sgml-dtd-4.3/catalog &>/dev/null
  install-catalog --remove /etc/sgml/sgml-docbook-dtd-4.3.cat \
    /etc/sgml/sgml-docbook.cat &>/dev/null
}

  