post_install() {
  /usr/bin/gtk-query-immodules-2.0 >/etc/gtk-2.0/gtk.immodules 2>/dev/null
   /usr/bin/gdk-pixbuf-query-loaders >/etc/gtk-2.0/gdk-pixbuf.loaders 2>/dev/null
}

post_upgrade() {
  /usr/bin/gtk-query-immodules-2.0 >/etc/gtk-2.0/gtk.immodules 2>/dev/null
   /usr/bin/gdk-pixbuf-query-loaders >/etc/gtk-2.0/gdk-pixbuf.loaders 2>/dev/null
}

post_remove() {
  /usr/bin/gtk-query-immodules-2.0 >/etc/gtk-2.0/gtk.immodules 2>/dev/null
   /usr/bin/gdk-pixbuf-query-loaders >/etc/gtk-2.0/gdk-pixbuf.loaders 2>/dev/null
}
