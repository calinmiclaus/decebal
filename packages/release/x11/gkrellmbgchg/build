NAME=gkrellmbgchg
VERSION=0.1.3
ARCH=i686
RELEASE=1
URL="http://www.bender-suhl.de/stefan/english/comp/gkrellmbgchg.html"
DESC="Periodically updates the desktops background image."
GROUP=x11
LICENSE="GPLv2"
SIZE="11K"

SOURCES="http://www.bender-suhl.de/stefan/comp/sources/${NAME}2-$VERSION.tar.gz"

RUNTIME="gtk2 >=gkrellm-2.0"

build() {
  cd $SRC/${NAME}2-$VERSION
  
  make
  
  install -D -m 0755 gkrellmbgchg.so $PKG/usr/lib/gkrellm/gkrellmbgchg.so
  
  install_docs ChangeLog README TODO
}
