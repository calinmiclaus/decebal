NAME=alsa-oss
VERSION=1.0.8
ARCH=i686
RELEASE=1
URL="http://www.alsa-project.org"
DESC="OSS compatibility library for ALSA."
GROUP=multimedia
LICENSE="GPLv2"
SIZE="218K"

SOURCES="ftp://ftp.alsa-project.org/pub/oss-lib/alsa-oss-1.0.8.tar.bz2"

RUNTIME=">=alsa-lib-1.0.8"

build() {
  cd $SRC/$NAME-$VERSION

  ./configure --prefix=/usr \
              --sysconfdir=/etc \
	      --localstatedir=/var/lib \
	      --infodir=/usr/share/info \
	      --mandir=/usr/share/man
  make
  make DESTDIR=$PKG install

  install_docs COPYING
}
