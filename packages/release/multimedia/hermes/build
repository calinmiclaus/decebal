NAME=hermes
VERSION=1.3.3
ARCH=i686
RELEASE=1
URL="http://clanlib.org/hermes"
DESC="Convert graphic data from one pixel format to another."
GROUP=multimedia
LICENSE="GPLv2"
SIZE="348K"
HUSE="static"

SOURCES="http://clanlib.org/hermes/Hermes-1.3.3.tar.bz2"

BUILDTIME="nasm"

build() {
  cd $SRC/Hermes-$VERSION
  
  use static || OPTS="--disable-static"
    
  ./configure --prefix=/usr $OPTS
  make
  make prefix=$PKG/usr install

  install_docs AUTHORS COPYING ChangeLog FAQ INSTALL* \
    NEWS README TODO*
}
