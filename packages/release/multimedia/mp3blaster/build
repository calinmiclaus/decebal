NAME=mp3blaster
VERSION=3.2.0
ARCH=i686
RELEASE=1
URL="http://www.stack.nl/~brama/mp3blaster/"
DESC="A console based program for playing mp3 files."
GROUP=multimedia
LICENSE="GPLv2"
SIZE="305K"
HUSE="lirc mysql nas"

SOURCES="http://www.stack.nl/~brama/mp3blaster/src/mp3blaster-3.2.0.tar.gz"

RUNTIME=">=ncurses-5.3 libvorbis"

use lirc && RUNTIME="$RUNTIME lirc"
use mysql && RUNTIME="$RUNTIME mysql"
use nas && RUNTIME="$RUNTIME nas"

build() {
  cd $SRC/$NAME-$VERSION

  use lirc && OPTS="$OPTS --with-lirc" || OPTS="$OPTS --without-lirc"
  use mysql && OPTS="$OPTS --with-mysql" || OPTS="$OPTS --without-mysql"
  use nas && OPTS="$OPTS --with-nas" || OPTS="$OPTS --without-nas"

  ./configure --prefix=/usr \
              --sysconfdir=/etc \
	      --with-cxxflags="$CXXFLAGS" \
	      $OPTS
  make
  make DESTDIR=$PKG install

  install_docs TODO README NEWS INSTALL FAQ ChangeLog CREDITS \
    COPYING BUGS AUTHORS
}
