NAME=libmusicbrainz
VERSION=2.1.0
ARCH=i686
RELEASE=1
URL="http://www.musicbrainz.org/index.html"
DESC="MusicBrainz is the second generation incarnation of the CD Index"
GROUP=multimedia
LICENSE="LGPLv2.1"
SIZE="515K"
HUSE="static"

SOURCES="ftp://ftp.musicbrainz.org/pub/musicbrainz/libmusicbrainz-2.1.0.tar.gz"

RUNTIME="expat gcc"

build() {
  cd $SRC/$NAME-$VERSION

  mkdir -p $PKG/usr/lib/pkgconfig
  
  use static || OPTS="--disable-static"
   
  ./configure --prefix=/usr $OPTS
  make
  make prefix=$PKG/usr install

  install_docs AUTHORS COPYING ChangeLog INSTALL README README.win32 TODO
}

    
