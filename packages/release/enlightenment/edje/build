NAME=edje
VERSION=0.5.0.013
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="A graphical layout and animation library for animated resizable, compressed and scalable themes."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="3087K"
HUSE="static"

#http://enlightenment.freedesktop.org/fetch.php?file=edje-0.5.0.013.tar.gz
SOURCES="$NAME-$VERSION.tar.gz"

RUNTIME="=evas-0.9.9.013 =eet-0.9.10.013 >=openssl-0.9.7e =embryo-0.9.1.013 >=imlib2-1.0.0 ecore libast imlib2_loaders"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
#  ./autogen.sh
  CPPFLAGS="$CPPFLAGS -I/opt/enlightenment/include" \
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* INSTALL NEWS README
}
