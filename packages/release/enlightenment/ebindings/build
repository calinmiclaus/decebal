NAME=ebindings
VERSION=21052005
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="Keybinds and Menus for e17."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="25K"
HUSE="static"

SOURCES="ebindings-21052005.tar.bz2"

RUNTIME="=evas-21052005 =eet-21052005 >=edb-21052005 =embryo-21052005 =edje-21052005"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  touch NEWS ChangeLog
  
  ./autogen.sh
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS ChangeLog README TODO
}
