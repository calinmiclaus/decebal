NAME=esmart
VERSION=0.9.0.004
ARCH=i686
RELEASE=1
URL="http://www.enlightenment.org/"
DESC="A collection of evas smart objects."
GROUP=enlightenment
LICENSE="BSDL"
SIZE="366K"
HUSE="static"

#http://enlightenment.freedesktop.org/fetch.php?file=esmart-0.9.0.004.tar.gz
SOURCES="$NAME-$VERSION.tar.gz"

RUNTIME="=evas-0.9.9.013 =ecore-0.9.9.013 >=imlib2-1.0.0 =epsilon-0.3.0.004"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
#  ./autogen.sh
  CPPFLAGS="$CPPFLAGS -I/opt/enlightenment/include" \
  ./configure --prefix=/opt/enlightenment \
              --sysconfdir=/etc/opt/enlightenment $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* INSTALL ChangeLog \
    NEWS README
}
