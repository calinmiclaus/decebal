post_install() {
  XDG_DATA_DIRS="/opt/xfce/share" \
  /usr/bin/update-desktop-database >/dev/null 2>&1
}

post_upgrade() {
  XDG_DATA_DIRS="/opt/xfce/share" \
  /usr/bin/update-desktop-database >/dev/null 2>&1
}

post_remove() {
  XDG_DATA_DIRS="/opt/xfce/share" \
  /usr/bin/update-desktop-database >/dev/null 2>&1
}
