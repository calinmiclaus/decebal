NAME=xfce4-showdesktop-plugin
VERSION=0.4.0
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="XFce4 show desktop plugin."
GROUP=xfce-extra
LICENSE=BSDL
SIZE="311K"
HUSE="static debug profile"

SOURCES="http://download.berlios.de/xfce-goodies/xfce4-showdesktop-plugin-0.4.0.tar.gz"

BUILDTIME="gettext pkgconfig"

RUNTIME=">=xfce4-panel-4.0.0"

build() {
  cd $SRC/$NAME
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"  
  
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      --with-locales-dir=/usr/share/locale \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS README
}

