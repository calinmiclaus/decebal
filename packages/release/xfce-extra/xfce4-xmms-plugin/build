NAME=xfce4-xmms-plugin
VERSION=0.1.1
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="XMMS Control plugin for the XFCE panel."
GROUP=xfce-extra
LICENSE=BSDL
SIZE="142K"
HUSE="static debug profile"

SOURCES="http://download.berlios.de/xfce-goodies/xfce4-xmms-plugin-0.1.1.tar.bz2"

BUIDLTIME="pkgconfig"

RUNTIME=">=xfce4-panel-0.10.1 xmms"

build() {
  cd $SRC/$NAME-$VERSION

  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
        
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL README
}
