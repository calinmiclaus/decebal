post_install() {
  schemas="/etc/opt/gnome/gconf/schemas/apps_evolution_addressbook-2.2.schemas
    /etc/opt/gnome/gconf/schemas/apps_evolution_calendar-2.2.schemas
    /etc/opt/gnome/gconf/schemas/apps_evolution_shell-2.2.schemas
    /etc/opt/gnome/gconf/schemas/evolution-mail-2.2.schemas"
    
  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-install-rule "$schema" >/dev/null 2>&1
  done
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper >/dev/null 2>&1
  /usr/bin/update-desktop-database >/dev/null 2>&1
}

post_upgrade() {
  schemas="/etc/opt/gnome/gconf/schemas/apps_evolution_addressbook-2.2.schemas
    /etc/opt/gnome/gconf/schemas/apps_evolution_calendar-2.2.schemas
    /etc/opt/gnome/gconf/schemas/apps_evolution_shell-2.2.schemas
    /etc/opt/gnome/gconf/schemas/evolution-mail-2.2.schemas"
    
  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-install-rule "$schema" >/dev/null 2>&1
  done
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper >/dev/null 2>&1
  /usr/bin/update-desktop-database >/dev/null 2>&1
}

pre_remove() {
  schemas="/etc/opt/gnome/gconf/schemas/apps_evolution_addressbook-2.2.schemas
    /etc/opt/gnome/gconf/schemas/apps_evolution_calendar-2.2.schemas
    /etc/opt/gnome/gconf/schemas/apps_evolution_shell-2.2.schemas
    /etc/opt/gnome/gconf/schemas/evolution-mail-2.2.schemas"
    
  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-install-rule "$schema" >/dev/null 2>&1
  done
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1
}

post_remove() {
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper >/dev/null 2>&1
  /usr/bin/update-desktop-database >/dev/null 2>&1
}
        