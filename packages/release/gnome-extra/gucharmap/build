NAME=gucharmap
VERSION=1.4.3
ARCH=i686
RELEASE=1
URL="http://gnome.org/"
DESC="A GNOME applet that shows the network status."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="1472K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gucharmap-1.4.3.tar.bz2"

BUILDTIME="intltool"

RUNTIME="gtk2 libgnomeui"

build() {
  cd $SRC/$NAME-$VERSION
	 
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --localstatedir=/var/lib
  make
  make DESTDIR=$PKG install
  
  install_docs COPYING* ChangeLog INSTALL NEWS README TODO
}
