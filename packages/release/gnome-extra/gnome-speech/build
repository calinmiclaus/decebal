NAME=gnome-speech
VERSION=0.3.6
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="A simple general API for producing text-to-speech output."
GROUP=gnome-extra
LICENSE="LGPLv2.1"
SIZE="260K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gnome-speech-0.3.6.tar.bz2"

RUNTIME="libbonobo-1.9.0"

# are o groaza de use flags

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/opt/gnome
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}
