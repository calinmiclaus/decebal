NAME=gnomesu
VERSION=0.3.1
ARCH=i686
RELEASE=1
URL="http://xsu.sourceforge.net/"
DESC="Run commands as a different user."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="217K"
HUSE="static debug"

SOURCES="http://heanet.dl.sourceforge.net/sourceforge/xsu/gnomesu-0.3.1.tar.gz"

BUILDTIME="pkgconfig gettext"

RUNTIME=">=gtk2-1.3.1 >=libgnomeui-1.96.0 >=libzvt-1.0 >=libglade-1.0.0"

build() {
  cd $SRC/$NAME-$VERSION
 
  use static || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug"
   
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --mandir=/opt/gnome/share/man $OPTS
  make
  make DESTDIR=$PKG install
  
  rm -rf $PKG/opt/gnome/doc
  
  install -D -m 0644 $PKG//opt/gnome/share/gnome/apps/Applications/xsu.desktop \
    $PKG/opt/gnome/share/applications/xsu.destkop
  
  sed -i "s:^Exec=gsu:Exec=gnomesu:" $PKG/opt/gnome/share/applications/xsu.destkop
  
  install_docs ABOUT-NLS AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO
}

