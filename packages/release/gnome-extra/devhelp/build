NAME=devhelp
VERSION=0.9.3
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="A developer's help browser for the GNOME Desktop."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="373K"
HUSE="static"

SOURCES="http://ftp.gnome.org/pub/GNOME/sources/devhelp/0.9/devhelp-0.9.3.tar.bz2"

RUNTIME=">=gtk2-2.2.0 >=gnome-vfs-2.0 >=libgnomeui-2.2.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO
}
