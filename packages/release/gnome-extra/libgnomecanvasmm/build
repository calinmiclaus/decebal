NAME=libgnomecanvasmm
VERSION=2.10.0
ARCH=i686
RELEASE=1
URL="http://gtkmm.sourceforge.net/"
DESC="C++ bindings for libgnomecanvas."
GROUP=gnome-extra
LICENSE="GPLv2 LGPLv2.1"
SIZE="308K"
HUSE="static"

SOURCES="ftp://ftp.gnome.org/pub/gnome/bindings/2.10/2.10.0/sources/c++/libgnomecanvasmm-2.10.0.tar.bz2"

BUILDTIME="pkgconfig"

RUNTIME=">=gtkmm2-2.6.0 >=libgnomecanvas-2.6.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  ./configure --prefix=/opt/gnome $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO
}
