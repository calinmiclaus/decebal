NAME=gnome-games-extra-data
VERSION=2.10.0
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="Extra data for the GNOME Games."
GROUP=gnome-extra
LICENSE="GPLv2"
SIZE="3482K"

SOURCES="http://ftp.gnome.org/pub/GNOME/sources/gnome-games-extra-data/2.10/gnome-games-extra-data-2.10.0.tar.bz2"

BUILDTIME="intltool"

RUNTIME=">=gnome-games-2.10.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/opt/gnome
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README 
}
