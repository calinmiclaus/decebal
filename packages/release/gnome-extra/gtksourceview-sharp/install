post_install() {
   export PATH="$PATH:/opt/mono/bin"
   /opt/mono/bin/monodoc --make-index >/dev/null 2>&1
}

post_upgrade() {
   export PATH="$PATH:/opt/mono/bin"
   /opt/mono/bin/monodoc --make-index >/dev/null 2>&1
}

post_remove() {
   export PATH="$PATH:/opt/mono/bin"
   /opt/mono/bin/monodoc --make-index >/dev/null 2>&1
}
