NAME=foobillard
VERSION=2.8
ARCH=i686
RELEASE=1
URL="http://foobillard.sunsite.dk/"
DESC="A free OpenGL-billard for Linux."
GROUP=games
LICENSE="GPLv2"
SIZE="1072K"

SOURCES="http://games.linux.sk/files/foobillard-2.8.tar.gz"

RUNTIME="xorg libsdl"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr/games
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README* TODO
}
