NAME=imlib2
VERSION=1.2.0
ARCH=i686
RELEASE=1
DESC="A library that does image file loading."
URL="http://enlightenment.org/"
GROUP=graphics
LICENSE="BSDL"
SIZE="869K"
HUSE="static"

SOURCES="http://heanet.dl.sourceforge.net/sourceforge/enlightenment/imlib2-1.2.0.tar.gz"

RUNTIME="libtiff libpng zlib libjpeg libungif gtk glib freetype"

build () { 
  cd $SRC/$NAME-$VERSION

  mkdir -p $PKG/usr/include
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  
  ./configure --prefix=/usr \
              $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog README TODO
}
