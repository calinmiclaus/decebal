NAME=gtk-sharp
VERSION=1.0.8
ARCH=i686
RELEASE=1
URL="http://gtk-sharp.sourceforge.net/"
DESC="C# bindings for GTK and GNOME."
GROUP=graphics
LICENSE="LGPLv2.1"
SIZE="1740K"
HUSE="static"

SOURCES="http://heanet.dl.sourceforge.net/sourceforge/gtk-sharp/gtk-sharp-1.0.8.tar.gz"

RUNTIME=">=mono-0.9.6 gtk2 >=vte-0.11.10 >=librsvg-2.0.1 perl >=libgnomeui-2.2.0 >=libgnomeprintui-2.2.0
>=libgda-1.0.0 >=libgnomedb-1.0.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  
  PKG_CONFIG_PATH="/opt/mono/lib/pkgconfig:/opt/gnome/lib/pkgconfig" \
  PATH="$PATH:/opt/mono/bin" \
    ./configure --prefix=/opt/mono \
                --sysconfdir=/etc/opt/mono \
		$OPTS
  make
  make GACUTIL="/opt/mono/bin/gacutil /root $PKG/opt/mono/lib" DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog HACKING INSTALL \
    NEWS README*
}

