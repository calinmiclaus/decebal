NAME=libglademm
VERSION=2.6.0
ARCH=i686
RELEASE=1
URL="http://gtkmm.sourceforge.net/"
DESC="C++ bindings for libglade."
GROUP=graphics
LICENSE="LGPLv2.1"
HUSE="static"

SOURCES="ftp://ftp.gnome.org/pub/gnome/bindings/2.10/2.10.0/sources/c++/libglademm-2.6.0.tar.bz2"

BUILDTIME="pkgconfig"

RUNTIME=">=libglade-2.3.6 >=gtkmm-2.6.2"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static || OPTS="--disable-static"
  
  ./configure --prefix=/opt/gnome $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README TODO
}
