NAME=libidl
VERSION=0.8.5
ARCH=i686
RELEASE=1
DESC="A front-end for CORBA 2.2 IDL and Netscape's XPIDL."
URL="http://www.gome.org/"
GROUP=libs
LICENSE="GPLv2"
SIZE="331K"
HUSE="static"

SOURCES="http://ftp.acc.umu.se/pub/gnome/sources/libIDL/0.8/libIDL-0.8.5.tar.bz2"

BUILDTIME="pkgconfig"

RUNTIME=">=glib2-1.3.7"

build () { 
  cd $SRC/libIDL-$VERSION

  use static || OPTS="--disable-static"    
  
  ./configure --prefix=/usr \
              --infodir=/usr/share/info $OPTS
  make
  make DESTDIR=$PKG install

  install_docs AUTHORS BUGS COPYING ChangeLog HACKING INSTALL \
    MAINTAINERS NEWS README README.win32
}
