NAME=netkit-rwho
VERSION=0.17
ARCH=i686
RELEASE=1
DESC="This is netkit-rwho for Linux."
URL="ftp://ftp.uk.linux.org/pub/linux/Networking/netkit/"
LICENSE=PD
GROUP=network
SIZE="20K"

SOURCES="ftp://ftp.uk.linux.org/pub/linux/Networking/netkit/netkit-rwho-0.17.tar.gz"

RUNTIME=">=netkit-base-0.17"

build() {
  cd $SRC/$NAME-$VERSION
  
  mkdir -p $PKG/usr/{bin,sbin,man/man{1,8}}
  
  ./configure --prefix=$PKG/usr
  make
  make DESTDIR=$PKG install
  
  install_docs ChangeLog MRULES README
}
