NAME=gnet
VERSION=2.0.7
ARCH=i686
RELEASE=1
URL="http://www.gnetlibrary.org/"
DESC="A simple network library written in C."
GROUP=network
LICENSE="GPLv2"
SIZE="595K"
HUSE="debug glib1 static gtkdoc"

SOURCES="http://www.gnetlibrary.org/src/gnet-2.0.7.tar.gz"

use glib1 && RUNTIME="glib" || RUNTIME="glib2"

use gtkdoc && BUILDTIME="gtk-doc"

build() {
  cd $SRC/$NAME-$VERSION
  
  use debug && OPTS="--enable-debug=yes"
  use glib1 && OPTS="$OPTS --enable-glib1.2"
  use static && OPTS="$OPTS --enable-static" || OPTS="$OPTS --disable-static"
  use gtkdoc && OPTS="$OPTS --enable-gtk-doc"
  
  ./configure --prefix=/usr \
              $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS BUGS COPYING ChangeLog GNET.DSP HACKING \
    INSTALL NEWS README* TODO
}

