NAME=libxklavier
VERSION=2.0
ARCH=i686
RELEASE=1
URL="http://gswitchit.sourceforge.net/"
DESC="Utility library to make XKB stuff easier."
GROUP=gnome
LICENSE="LGPLv2.1"
SIZE="306K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/libxklavier-2.0.tar.bz2"

RUNTIME="xorg libxml2"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING.LIB CREDITS ChangeLog \
    INSTALL NEWS README
}
