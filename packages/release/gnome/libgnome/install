post_install() {
  schemas="/etc/opt/gnome/gconf/schemas/desktop_gnome_accessibility_keyboard.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_accessibility_startup.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_browser.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_help_viewer.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_terminal.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_window_manager.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_background.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_file_views.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_interface.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_peripherals_keyboard.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_peripherals_mouse.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_sound.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_thumbnailers.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_typing_break.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_lockdown.schemas"
  
  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-install-rule "$schema" > /dev/null 2>&1
  done
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1
}

post_upgrade() {
  schemas="/etc/opt/gnome/gconf/schemas/desktop_gnome_accessibility_keyboard.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_accessibility_startup.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_browser.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_help_viewer.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_terminal.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_window_manager.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_background.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_file_views.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_interface.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_peripherals_keyboard.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_peripherals_mouse.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_sound.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_thumbnailers.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_url_handlers.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_typing_break.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_lockdown.schemas"
  
  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-install-rule "$schema" > /dev/null 2>&1
  done
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1
}

pre_remove() {
  schemas="/etc/opt/gnome/gconf/schemas/desktop_gnome_accessibility_keyboard.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_accessibility_startup.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_browser.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_help_viewer.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_terminal.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_applications_window_manager.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_background.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_file_views.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_interface.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_peripherals_keyboard.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_peripherals_mouse.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_sound.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_thumbnailers.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_url_handlers.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_typing_break.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_lockdown.schemas"
  
  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-uninstall-rule "$schema" > /dev/null 2>&1
  done
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1
}


	
