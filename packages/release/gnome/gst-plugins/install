post_install() {
  /sbin/ldconfig &>/dev/null
  rm -f /var/cache/gstreamer-0.8/{compreg,registry}.xml
  /opt/gnome/bin/gst-compprep > /dev/null 2>&1
  /opt/gnome/bin/gst-register > /dev/null 2>&1
  GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-install-rule "/etc/opt/gnome/gconf/schemas/gstreamer.schemas" > /dev/null 2>&1
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1  
}

post_upgrade() {
  /sbin/ldconfig &>/dev/null
  rm -f /var/cache/gstreamer-0.8/{compreg,registry}.xml
  /opt/gnome/bin/gst-compprep > /dev/null 2>&1
  /opt/gnome/bin/gst-register > /dev/null 2>&1
  GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-install-rule "/etc/opt/gnome/gconf/schemas/gstreamer.schemas" > /dev/null 2>&1
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1  
}

pre_remove() {
  GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-uninstall-rule "/etc/opt/gnome/gconf/schemas/gstreamer.schemas" > /dev/null 2>&1
  /bin/killall -HUP /opt/gnome/bin/gconfd-2 >/dev/null 2>&1  
}

post_remove() {
  rm -rf /var/cache/gstreamer-0.8 >/dev/null 2>&1
}
