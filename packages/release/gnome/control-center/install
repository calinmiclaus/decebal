post_install() {
  schemas="/etc/opt/gnome/gconf/schemas/apps_gnome_settings_daemon_default_editor.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_peripherals_keyboard_xkb.schemas
    /etc/opt/gnome/gconf/schemas/apps_gnome_settings_daemon_keybindings.schemas
    /etc/opt/gnome/gconf/schemas/fontilus.schemas
    /etc/opt/gnome/gconf/schemas/apps_gnome_settings_daemon_screensaver.schemas
    /etc/opt/gnome/gconf/schemas/themus.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_font_rendering.schemas"
  
  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-install-rule "$schema" > /dev/null 2>&1
  done
  /bin/killall -HUP gconftool-2 >/dev/null 2>&1
  /usr/bin/update-desktop-database >/dev/null 2>&1
  /usr/bin/update-mime-database /opt/gnome/share/mime >/dev/null 2>&1
}
    
post_upgrade() {
  schemas="/etc/opt/gnome/gconf/schemas/apps_gnome_settings_daemon_default_editor.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_peripherals_keyboard_xkb.schemas
    /etc/opt/gnome/gconf/schemas/apps_gnome_settings_daemon_keybindings.schemas
    /etc/opt/gnome/gconf/schemas/fontilus.schemas
    /etc/opt/gnome/gconf/schemas/apps_gnome_settings_daemon_screensaver.schemas
    /etc/opt/gnome/gconf/schemas/themus.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_font_rendering.schemas"
  
  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 --makefile-install-rule "$schema" > /dev/null 2>&1
  done
  /bin/killall -HUP gconftool-2 >/dev/null 2>&1
  /usr/bin/update-desktop-database >/dev/null 2>&1
  /usr/bin/update-mime-database /opt/gnome/share/mime >/dev/null 2>&1
}

pre_remove() {
  schemas="/etc/opt/gnome/gconf/schemas/apps_gnome_settings_daemon_default_editor.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_peripherals_keyboard_xkb.schemas
    /etc/opt/gnome/gconf/schemas/apps_gnome_settings_daemon_keybindings.schemas
    /etc/opt/gnome/gconf/schemas/fontilus.schemas
    /etc/opt/gnome/gconf/schemas/apps_gnome_settings_daemon_screensaver.schemas
    /etc/opt/gnome/gconf/schemas/themus.schemas
    /etc/opt/gnome/gconf/schemas/desktop_gnome_font_rendering.schemas"
  
  for schema in $schemas
  do
    GCONF_CONFIG_SOURCE=`/opt/gnome/bin/gconftool-2 --get-default-source` /opt/gnome/bin/gconftool-2 ---makefile-uninstall-rule "$schema" > /dev/null 2>&1
  done
  /opt/gnome/bin/gconftool-2 --direct --config-source `/opt/gnome/bin/gconftool-2 --get-default-source` --unload /etc/opt/gnome/etc/gconf/schemas/panel-default-setup.entries > /dev/null 2>&1
  /bin/killall -HUP gconftool-2 >/dev/null 2>&1
}

post_remove() {
  /usr/bin/update-desktop-database > /dev/null 2>&1
  /usr/bin/update-mime-database /opt/gnome/share/mime > /dev/null 2>&1
}
    
