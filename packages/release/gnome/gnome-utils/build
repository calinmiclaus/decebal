NAME=gnome-utils
VERSION=2.10.0
ARCH=i686
RELEASE=1
URL="http://gnome.org/"
DESC="A set of utilities for the GNOME Desktop."
GROUP=gnome
LICENSE="GPLv2"
SIZE="1965K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gnome-utils-2.10.0.tar.bz2"

BUILDTIME="intltool"

RUNTIME="e2fsprogs libgnomeprintui gnome-panel gnome-desktop hal"

build() {
  cd $SRC/$NAME-$VERSION
  
  find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
  if [ -f omf.make ]; then
    sed -i -e 's/-scrollkeeper-update.*//' omf.make
  fi
	    
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome \
	      --mandir=/opt/gnome/share/man \
	      --libexecdir=/opt/gnome/lib/applets \
	      --localstatedir=/var/lib \
	      --enable-hal
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS README THANKS
}
