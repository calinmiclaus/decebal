NAME=gnome-icon-theme
VERSION=2.10.0
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="The default icon theme for the GNOME Desktop."
GROUP=gnome
LICENSE=GPLv2
SIZE="2835K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gnome-icon-theme-2.10.0.tar.bz2"

BUILDTIME="xml-parser-perl"

RUNTIME=">=hicolor-icon-theme-0.5"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL README TODO
}
