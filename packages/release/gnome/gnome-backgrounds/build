NAME=gnome-backgrounds
VERSION=2.10.0
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="The GNOME backgrounds chooser."
GROUP=gnome
LICENSE="GPLv2"
SIZE="2196K"

SOURCES="ftp://ftp.gnome.org/pub/gnome/desktop/2.10/2.10.0/sources/gnome-backgrounds-2.10.0.tar.bz2"

BUILDTIME="intltool"

RUNTIME="gnome-desktop"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/opt/gnome \
              --sysconfdir=/etc/opt/gnome
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS README
}
