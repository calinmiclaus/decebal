NAME=net-dns-perl
VERSION=0.53
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~crein/Net-DNS-0.53/"
DESC="Perl DNS Resolver Module."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="116K"

SOURCES="http://search.cpan.org/CPAN/authors/id/O/OL/OLAF/Net-DNS-0.53.tar.gz"

Digest::HMAC_MD5 1 not found.

RUNTIME="digest-hmac-md5-perl"

build() {
  cd $SRC/Net-DNS-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST TODO
}
