NAME=archive-tar-perl
VERSION=1.26
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~kane/Archive-Tar-1.26/"
DESC="Create and manipulate (in-memory) tar files."
GROUP=perl-modules
LICENSE="ARTISTIC"
SIZE="31K"

SOURCES="http://search.cpan.org/CPAN/authors/id/K/KA/KANE/Archive-Tar-1.26.tar.gz"

RUNTIME="io-zlib-perl
         io-string-perl
         perl"

build() {
  cd $SRC/Archive-Tar-$VERSION
  
  perl Makefile.PL
  make
  make DESTDIR=$PKG install
  
  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;
  
  install_docs README MANIFEST
}
