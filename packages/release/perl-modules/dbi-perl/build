NAME=dbi-perl
VERSION=1.48
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~timb/DBI-1.48/"
DESC="The Perl Database Interface."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="369K"

SOURCES="http://search.cpan.org/CPAN/authors/id/T/TI/TIMB/DBI-1.48.tar.gz"

build() {
  cd $SRC/DBI-$VERSION

  perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST ToDo
}
