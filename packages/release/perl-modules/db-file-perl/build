NAME=db-file-perl
VERSION=1.811
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~pmqs/DB_File-1.811/"
DESC="Use facilities provided by Berkley DB 1 in perl."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="84K"

SOURCES="http://search.cpan.org/CPAN/authors/id/P/PM/PMQS/DB_File-1.811.tar.gz"

RUNTIME="db"

build() {
  cd $SRC/DB_File-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST
}
