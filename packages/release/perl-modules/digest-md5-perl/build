NAME=digest-md5-perl
VERSION=2.33
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~gaas/Digest-MD5-2.33/"
DESC="Allows you to use the RSA Data Security Inc. MD5 Message Digest algorithm."
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="43K"

SOURCES="http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/Digest-MD5-2.33.tar.gz"

build() {
  cd $SRC/Digest-MD5-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs Changes README MANIFEST
}
