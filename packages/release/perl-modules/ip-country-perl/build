NAME=ip-country-perl
VERSION=2.20
ARCH=i686
RELEASE=1
URL="http://search.cpan.org/~nwetters/IP-Country-2.20/"
DESC="Dunno"
GROUP=perl-modules
LICENSE=ARTISTIC
SIZE="145K"

SOURCES="http://search.cpan.org/CPAN/authors/id/N/NW/NWETTERS/IP-Country-2.20.tar.gz"

build() {
  cd $SRC/IP-Country-$VERSION

  echo y | perl Makefile.PL
  make
  make DESTDIR=$PKG install

  find $PKG/usr/lib/perl5 -type f -name .packlist -exec rm -f -- {} \;
  find $PKG/usr/lib/perl5 -type f -name perllocal.pod -exec rm -f -- {} \;

  install_docs CHANGES INSTALL README MANIFEST
}
