post_install() {
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper >/dev/null 2>&1
  /usr/bin/update-desktop-database &>/dev/null
}

post_upgrade() {
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper >/dev/null 2>&1
  /usr/bin/update-desktop-database &>/dev/null
}

post_remove() {
  /usr/bin/scrollkeeper-update -p /var/lib/scrollkeeper >/dev/null 2>&1
  /usr/bin/update-desktop-database &>/dev/null
}
