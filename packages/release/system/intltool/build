NAME=intltool
VERSION=0.33
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="A internalization tool."
GROUP=system
LICENSE=GPLv2
SIZE="123K"

SOURCES="http://ftp.gnome.org/pub/GNOME/platform/2.8/2.8.1/sources/intltool-0.33.tar.bz2"

BUILDTIME="gettext"

RUNTIME="bash expat perl xml-parser-perl"

build() {
  cd $SRC/$NAME-$VERSION
    
  ./configure --prefix=/usr \
	      --sysconfdir=/etc
  make
  make DESTDIR=$PKG install
    
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS \
    README TODO
}
