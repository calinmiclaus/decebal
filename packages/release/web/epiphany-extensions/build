NAME=epiphany-extensions
VERSION=1.6.2
ARCH=i686
RELEASE=1
URL="http://www.gnome.org/"
DESC="Extensions for Epiphany."
GROUP=web
LICENSE=GPLv2
SIZE="543K"
HUSE="static debug"

SOURCES="http://ftp.gnome.org/pub/GNOME/sources/epiphany-extensions/1.6/epiphany-extensions-1.6.2.tar.bz2"

BUILDTIME="intltool"

RUNTIME=">=epiphany-1.6.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use debug && OPTS="--enable-debug"
  use static && OPTS="$OPTS --enable-static"
    
  ./configure --prefix=/opt/gnome \
              --with-extensions=adblock,certificates,dashboard,error-viewer,gestures,page-info,select-stylesheet,smart-bookmarks,tab-groups,tabsmenu \
	      --enable-opensp=yes $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING* ChangeLog HACKING INSTALL \
    NEWS README TODO
}
