NAME=mod_mono
VERSION=1.0.8
ARCH=i686
RELEASE=1
URL="http://www.mono-project.com/Main_Page"
DESC="Run ASP.NET pages on Unix with Apache and Mono."
GROUP=web
LICENSE="APACHEv2.0"
SIZE="315K"
HUSE="static debug"

SOURCES="http://www.go-mono.com/archive/1.0.8/mod_mono-1.0.8.tar.gz"

RUNTIME="mono apache"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS ---enable-debug"
  
  PKG_CONFIG_PATH="/opt/mono/lib/pkgconfig" \
  ./configure --prefix=/usr \
              --with-apxs=/usr/sbin/apxs \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install -d $PKG/etc/httpd/mod.d
  mv $PKG/etc/httpd/mod_mono.conf $PKG/etc/httpd/mod.d/
  
  install_docs AUTHORS COPYING ChangeLog INSTALL \
    NEWS README
}
