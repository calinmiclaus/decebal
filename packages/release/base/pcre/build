NAME=pcre
VERSION=5.0
ARCH=i686
RELEASE=1
URL="http://www.pcre.org/"
DESC="A library that implements Perl 5-style regular expressions."
GROUP=base
LICENSE=UC

SOURCES="ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/pcre-5.0.tar.bz2"

RUNTIME="libc"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
	      --infodir=/usr/share/info \
	      --enable-utf8
  make
  make DESTDIR=$PKG install
 
  chmod 644 $PKG/usr/lib/pkgconfig/libpcre.pc
  
  install_docs AUTHORS COPYING ChangeLog INSTALL LICENCE \
    NEWS NON-UNIX-USE README
}
