NAME=wget
VERSION=1.9.1
ARCH=i686
RELEASE=1
URL="http://www.gnu.org/software/wget/"
DESC="A network utility to retrieve files from the Web."
GROUP=base
LICENSE="GPLv2"
SIZE="1291K"

SOURCES="ftp://ftp.gnu.org/gnu/wget/wget-1.9.1.tar.gz wget.1.gz"

BUILDTIME="gettext"

RUNTIME=">=openssl-0.9.7e"

build() {
  cd $SRC/$NAME-$VERSION
  
  ./configure --prefix=/usr \
              --sysconfdir=/etc
  make
  make prefix=$PKG/usr install
  
  install -D -m 0644 ../wget.1 $PKG/usr/share/man/man1/wget.1
  install -D -m 0644 doc/sample.wgetrc $PKG/etc/wgetrc
    
  install_docs AUTHORS COPYING ChangeLog ChangeLog.README MACHINES INSTALL \
        MAILING-LIST NEWS PATCHES README README.cvs TODO
}
   