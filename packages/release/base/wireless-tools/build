NAME=wireless-tools
VERSION=27
ARCH=i686
RELEASE=1
URL="http://www.hpl.hp.com/personal/Jean_Tourrilhes/Linux/Tools.html"
DESC="Tools for Wireless Extensions unde Linux."
GROUP=base
LICENSE="GPLv2"
SIZE="183K"

SOURCES="http://pcmcia-cs.sourceforge.net/ftp/contrib/wireless_tools.27.tar.gz"

RUNTIME="libc"

build() {
  cd wireless_tools.$VERSION
  
  make
  make PREFIX=$PKG/usr install
  
  mv $PKG/usr/sbin $PKG/
  
  install_docs COPYING DISTRIBUTIONS.txt HOTPLUG.txt INSTALL \
    PCMCIA.txt README*
}
