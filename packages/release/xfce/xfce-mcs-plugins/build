NAME=xfce-mcs-plugins
VERSION=4.2.2
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="Plugins for the XFCE MCS manager."
GROUP=xfce
LICENSE=GPLv2
SIZE="837K"
HUSE="static debug profile"

SOURCES="http://www.us.xfce.org/archive/xfce-4.2.2/src/xfce-mcs-plugins-4.2.2.tar.gz"

BUILDTIME="gettext pkgconfig-0.9.0"

RUNTIME=">=xfce-mcs-manager-4.2.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"
  
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      --localstatedir=/var/opt/xfce \
	      --with-locales-dir=/usr/share/locale \
	      --enable-final \
	      --enable-xf86misc \
	      --enable-xkb \
	      --enable-randr \
	      --enable-xf86vm \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS \
    README TODO
}
