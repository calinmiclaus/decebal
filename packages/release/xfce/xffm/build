NAME=xffm
VERSION=4.2.2
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="XFCE File Manager."
GROUP=xfce
LICENSE=GPLv2
SIZE="4290K"
HUSE="static debug profile"

SOURCES="http://www.us.xfce.org/archive/xfce-4.2.2/src/xffm-4.2.2.tar.gz"

BUILDTIME="gettext >=pkgconfig-0.9.0"

RUNTIME=">=xfce-mcs-manager-4.2.0 >=xfprint-4.2.0 >=xfce4-panel-4.2.0 dbh >=librsvg-2.0 >=glib2-2.2.0
         >=gtk2-2.2.0 >=libxml2-2.4.0"
	 
build() {
  cd $SRC/$NAME-$VERSION

  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug"
  use profile && OPTS="$OPTS --enable-profiling"

  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      --mandir=/opt/xfce/share/man \
	      --with-locales-dir=/usr/share/locale \
	      --enable-panel \
	      --enable-scrambledir \
	      --enable-librsvg \
	      --enable-final \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS* COPYING ChangeLog INSTALL README \
    NEWS TODO
}
