NAME=libxfce4mcs
VERSION=4.2.2
ARCH=i686
RELEASE=1
DESC="Multi Channel Settings for Xfce4."
URL="http://www.xfce.org/"
GROUP=xfce
LICENSE=GPLv2
SIZE="364K"
HUSE="static debug profile"

SOURCES="http://www.us.xfce.org/archive/xfce-4.2.2/src/libxfce4mcs-4.2.2.tar.gz"

BUILDTIME="pkgconfig"

RUNTIME=">=libxfce4util-4.2.0"

build() {
  cd $SRC/$NAME-$VERSION
  
  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="OPTS --enable-debug=full" || OPTS="$OPTS --disable-debug"
  use profile && OPTS="$OPTS --enable-profiling" || OPTS="$OPTS --disable-profiling"
  
  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      --enable-final \
	      $OPTS
  make
  make DESTDIR=$PKG install
  
  install_docs AUTHORS COPYING ChangeLog INSTALL NEWS \
    README README
}
