NAME=xfce4-systray
VERSION=4.2.2
ARCH=i686
RELEASE=1
URL="http://www.xfce.org/"
DESC="XFCE panel systray plugin."
GROUP=xfce
LICENSE=BSDL
SIZE="304K"
HUSE="static debug profile"

SOURCES="http://www.us.xfce.org/archive/xfce-4.2.2/src/xfce4-systray-4.2.2.tar.gz"

BUILDTIME="pkgconfig"

RUNTIME=">=xfce4-panel-4.2.0 >=libxfcegui4-4.2.0"

build() {
  cd $SRC/$NAME-$VERSION

  use static && OPTS="--enable-static" || OPTS="--disable-static"
  use debug && OPTS="$OPTS --enable-debug=full"
  use profile && OPTS="$OPTS --enable-profiling"

  ./configure --prefix=/opt/xfce \
              --sysconfdir=/etc/opt/xfce \
	      --enable-final \
	      $OPTS
  make
  make DESTDIR=$PKG install

  install_docs AUTHORS COPYING ChangeLog INSTALL README
}

