#!/bin/bash

pkg_arg_debug() {
  [ "$DEBUG" = "yes" ] || return 0
  cat << EOF
PKG_BUILDDEPS=$PKG_BUILDDEPS
PKG_NOCLEAN=$PKG_NOCLEAN
PKG_NODEPS=$PKG_NODEPS
PKG_DOWNLOAD=$PKG_DOWNLOAD
PKG_FORCE=$PKG_FORCE
PKG_GENMD5=$PKG_GENMD5
PKG_IGNOREMD5=$PKG_IGNOREMD5
PKG_NOINSTALL=$PKG_NOINSTALL
PKG_INFO=$PKG_INFO
PKG_KEEP=$PKG_KEEP
PKG_NOSTRIP=$PKG_NOSTRIP
PKG_OPTIMIZE=$PKG_OPTIMIZE
PKG_NOSSP=$PKG_NOSSP
PKG_RMDEPS=$PKG_RMDEPS
PKG_REBUILD=$PKG_REBUILD
PKG_SYNCDEPS=$PKG_SYNCDEPS
PKG_SEARCH=$PKG_SEARCH
PKG_UPDATE=$PKG_UPDATE
PKG_VERBOSE=$PKG_VERBOSE

PKG_DIR="$PKG_DIR"
PKGADD_OPTS="$PKGADD_OPTS"
DSRC_OPTS="$DSRC_OPTS"
PKG_ARGS="$PKG_ARGS"
EOF
}